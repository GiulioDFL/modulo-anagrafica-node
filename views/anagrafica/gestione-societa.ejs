<!DOCTYPE html>
<html lang="it" data-theme="corporate">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Società</title>
    <!-- DaisyUI & Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.7.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .actions-col {
            white-space: nowrap;
            width: 1%;
        }
    </style>
</head>
<body class="bg-base-200 min-h-screen">
    <div class="container mx-auto p-4">
        <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
            <div class="text-center md:text-left">
                <h1 class="text-2xl font-bold text-base-content">Gestione Società</h1>
                <div class="text-sm opacity-70">Elenco completo</div>
            </div>
            <div class="flex gap-2">
                <a href="/anagrafica/dettaglio-societa/nuova" target="_blank" class="btn btn-sm btn-success text-white">
                    <i class="bi bi-plus-lg"></i> Nuova Società
                </a>
                <button onclick="window.close()" class="btn btn-sm btn-neutral">Chiudi</button>
            </div>
        </div>

        <!-- Sezione Filtri -->
        <div class="card bg-base-100 shadow-xl mb-6">
            <div class="card-body p-6">
                <form id="filterForm" class="grid grid-cols-1 md:grid-cols-3 gap-4 items-end" autocomplete="off">
                    <div class="form-control">
                        <label class="label py-0 pb-1"><span class="label-text">Ragione Sociale</span></label>
                        <input type="text" class="input input-bordered input-sm w-full" name="ragione_sociale" placeholder="Es. Acme Inc.">
                    </div>
                    <div class="form-control">
                        <label class="label py-0 pb-1"><span class="label-text">Partita IVA</span></label>
                        <input type="text" class="input input-bordered input-sm w-full" name="partita_iva" placeholder="Numerico">
                    </div>
                    <div class="form-control">
                        <label class="label py-0 pb-1"><span class="label-text">Codice Fiscale</span></label>
                        <input type="text" class="input input-bordered input-sm w-full" name="codice_fiscale" placeholder="Alfanumerico">
                    </div>
                    <div class="form-control">
                        <label class="label py-0 pb-1"><span class="label-text">Codice Destinatario</span></label>
                        <input type="text" class="input input-bordered input-sm w-full" name="codice_destinatario" placeholder="Es. 0000000">
                    </div>
                    <div class="form-control">
                        <label class="label py-0 pb-1"><span class="label-text">Settore / Categoria</span></label>
                        <input type="text" class="input input-bordered input-sm w-full" name="categoria" placeholder="Es. Informatica">
                    </div>
                    <div class="form-control">
                        <label class="label py-0 pb-1"><span class="label-text">Contatto</span></label>
                        <input type="text" class="input input-bordered input-sm w-full" name="contatto" placeholder="Es. email o telefono">
                    </div>

                    <div class="md:col-span-3 flex justify-end gap-2 mt-4 border-t pt-4">
                        <button type="button" class="btn btn-sm btn-ghost" onclick="resetFilters()">Reset</button>
                        <button type="submit" class="btn btn-sm btn-primary"><i class="bi bi-search"></i> Cerca</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Header Risultati -->
        <div class="flex justify-between items-center mb-4 px-1">
            <div id="resultsCount" class="text-sm font-semibold opacity-70">In attesa di ricerca...</div>
        </div>

        <!-- Grid Risultati (Card) -->
        <div id="societaContainer" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
            <!-- Contenuto caricato via AJAX -->
        </div>
    </div>

    
    <script>
        // Funzione per gestire la conferma di eliminazione sicura
        function confirmDelete(formElement) {
            const input = prompt("ATTENZIONE: Questa operazione è irreversibile.\nPer confermare scrivi 'elimina':");
            if (input === 'elimina') {
                formElement.confirm_prompt.value = input;
                return true;
            }
            alert("Operazione annullata: codice di conferma errato.");
            return false;
        }

        // Funzione per caricare i dati via AJAX
        function loadSocieta() {
            const formData = new FormData(document.getElementById('filterForm'));
            const params = new URLSearchParams(formData).toString();
            
            fetch(`/api/anagrafica/societa?${params}`)
                .then(response => response.json())
                .then(data => {
                    const container = document.getElementById('societaContainer');
                    const countLabel = document.getElementById('resultsCount');
                    container.innerHTML = '';
                    
                    if (data.error) {
                        container.innerHTML = `<div class="col-span-full text-center py-10 text-error bg-base-100 rounded-box shadow">Errore: ${data.error}</div>`;
                        countLabel.innerText = 'Errore';
                        return;
                    }

                    if (data.length === 0) {
                        container.innerHTML = '<div class="col-span-full text-center py-10 opacity-60 bg-base-100 rounded-box shadow">Nessuna società trovata con i filtri selezionati.</div>';
                        countLabel.innerText = '0 risultati trovati';
                        return;
                    }

                    countLabel.innerText = `${data.length} risultati trovati`;

                    data.forEach(item => {
                        // Gestione categorie/settori da expand di PocketBase
                        const categorie = item.expand && item.expand.categorie ? (Array.isArray(item.expand.categorie) ? item.expand.categorie : [item.expand.categorie]) : [];
                        const contatti = item.expand && item.expand.contatti ? (Array.isArray(item.expand.contatti) ? item.expand.contatti : [item.expand.contatti]) : [];

                        // Costruzione HTML Card
                        const card = `
                            <div class="card bg-base-100 shadow-md border border-base-200 hover:shadow-lg transition-shadow duration-200">
                                <div class="card-body p-5">
                                    <!-- Intestazione Card -->
                                    <div class="flex justify-between items-start gap-2">
                                        <h2 class="card-title text-lg font-bold text-primary break-words w-full">${item.ragione_sociale}</h2>
                                        ${item.codice_destinatario ? `<div class="badge badge-neutral badge-sm whitespace-nowrap" title="Codice Destinatario">${item.codice_destinatario}</div>` : ''}
                                    </div>

                                    <!-- Dati Fiscali -->
                                    <div class="text-xs text-base-content/70 mt-1 space-y-1">
                                        ${item.partita_iva ? `<div><span class="font-semibold">P.IVA:</span> ${item.partita_iva}</div>` : ''}
                                        ${item.codice_fiscale ? `<div><span class="font-semibold">CF:</span> ${item.codice_fiscale}</div>` : ''}
                                    </div>

                                    <!-- Settori -->
                                    <div class="flex flex-wrap gap-1 mt-3">
                                        ${categorie.length > 0 ? categorie.map(cat => `<span class="badge badge-ghost bg-blue-50 text-blue-700 border-blue-100 text-xs">${cat.valore}</span>`).join('') : '<span class="text-xs italic opacity-50">Nessun settore</span>'}
                                    </div>

                                    <!-- Contatti (Limitati a 2 righe visive o scroll se troppi, qui semplici) -->
                                    <div class="mt-3 space-y-1">
                                        ${contatti.length > 0 ? contatti.map(c => {
                                            let icon = 'bi-chat-text';
                                            if(c.tipo === 'email') icon = 'bi-envelope';
                                            if(c.tipo === 'pec') icon = 'bi-envelope-check';
                                            if(c.tipo === 'mobile') icon = 'bi-phone';
                                            if(c.tipo === 'phone') icon = 'bi-telephone';
                                            return `<div class="flex items-center gap-2 text-xs truncate" title="${c.tipo}: ${c.valore}">
                                                <i class="bi ${icon} opacity-70"></i> <span class="opacity-90">${c.valore}</span>
                                            </div>`;
                                        }).join('') : '<div class="text-xs italic opacity-50">Nessun contatto</div>'}
                                    </div>

                                    <!-- Azioni -->
                                    <div class="card-actions justify-end mt-4 pt-4 border-t border-base-200">
                                        <div class="join">
                                            <a href="/anagrafica/dettaglio-societa/${item.id}" target="_blank" class="btn btn-sm btn-primary join-item" title="Modifica"><i class="bi bi-pencil-square"></i></a>
                                            <a href="/anagrafica/gestione-sedi?societa_id=${item.id}" target="_blank" class="btn btn-sm btn-info text-white join-item" title="Sedi"><i class="bi bi-geo-alt"></i></a>
                                            <a href="/anagrafica/gestione-uffici?societa_id=${item.id}" target="_blank" class="btn btn-sm btn-neutral join-item" title="Uffici"><i class="bi bi-building"></i></a>
                                            <a href="/anagrafica/gestione-referenti?societa_id=${item.id}" target="_blank" class="btn btn-sm btn-warning text-white join-item" title="Referenti"><i class="bi bi-people"></i></a>
                                        </div>
                                        
                                        <form action="/anagrafica/gestione-societa/delete" method="POST" class="inline-block ml-2" onsubmit="return confirmDelete(this);">
                                            <input type="hidden" name="id" value="${item.id}">
                                            <input type="hidden" name="confirm_prompt">
                                            <button type="submit" class="btn btn-sm btn-error text-white" title="Elimina">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        `;
                        container.innerHTML += card;
                    });
                })
                .catch(err => console.error('Errore caricamento dati:', err));
        }

        function resetFilters() {
            document.getElementById('filterForm').reset();
            loadSocieta();
        }

        // Carica i dati all'avvio e al submit del form
        document.addEventListener('DOMContentLoaded', () => { loadSocieta(); });
        document.getElementById('filterForm').addEventListener('submit', function(e) {
            e.preventDefault();
            loadSocieta();
        });
    </script>
</body>
</html>
