<!DOCTYPE html>
<html lang="it" data-theme="corporate">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dettaglio Referente</title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.7.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-base-200 min-h-screen py-8">
    <div class="container mx-auto p-4 max-w-3xl">
        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="card-title text-2xl" id="pageTitle">Dettaglio Referente</h2>
                    <button onclick="window.close()" class="btn btn-sm btn-ghost">Chiudi</button>
                </div>
                
                <div id="contextInfo" class="alert bg-base-200 text-sm mb-4 hidden flex-col items-start gap-2">
                    <div class="font-bold">Contesto:</div>
                    <div id="contextList" class="flex flex-col gap-1 w-full pl-2 border-l-2 border-base-300"></div>
                </div>

                <form id="referenteForm" autocomplete="off" class="flex flex-col gap-4">
                    <input type="hidden" id="id" name="id" value="<%= id %>">
                    <input type="hidden" id="societa_id" name="societa_id" value="<%= societa_id %>">
                    <input type="hidden" id="sede_id" name="sede_id" value="<%= sede_id || '' %>">
                    <input type="hidden" id="ufficio_id" name="ufficio_id" value="<%= ufficio_id || '' %>">

                    <!-- Dati Persona -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="form-control">
                            <label for="nome" class="label"><span class="label-text">Nome <span class="text-error">*</span></span></label>
                            <input type="text" class="input input-bordered w-full" id="nome" name="nome" required>
                        </div>
                        <div class="form-control">
                            <label for="cognome" class="label"><span class="label-text">Cognome <span class="text-error">*</span></span></label>
                            <input type="text" class="input input-bordered w-full" id="cognome" name="cognome" required>
                        </div>
                    </div>

                    <!-- Ruolo -->
                    <div class="form-control">
                        <label for="cva_tipo_ruolo_id" class="label"><span class="label-text">Ruolo <span class="text-error">*</span></span></label>
                        <select class="select select-bordered w-full" id="cva_tipo_ruolo_id" name="cva_tipo_ruolo_id" required>
                            <option value="">Seleziona Ruolo...</option>
                        </select>
                    </div>

                    <div class="card-actions justify-end mt-4">
                        <button type="submit" id="saveButton" class="btn btn-success text-white">Salva</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        const id = "<%= id %>";
        const isNew = id === 'nuova';
        const form = document.getElementById('referenteForm');
        const saveButton = document.getElementById('saveButton');
        
        // Parametri iniziali da EJS
        const urlParams = new URLSearchParams(window.location.search);
        const initialSedeId = "<%= sede_id || '' %>" || urlParams.get('sede_id') || '';
        const initialUfficioId = "<%= ufficio_id || '' %>" || urlParams.get('ufficio_id') || '';
        const initialSocietaId = "<%= societa_id || '' %>" || urlParams.get('societa_id') || '';

        document.addEventListener('DOMContentLoaded', async () => {
            const societaInput = document.getElementById('societa_id');
            if (!societaInput.value && initialSocietaId) {
                societaInput.value = initialSocietaId;
            }
            const societaId = societaInput.value;
            
            // Caricamento dati preliminari
            await loadRoles();

            if (isNew) {
                document.getElementById('pageTitle').innerText = "Nuovo Referente";
                form.action = "/anagrafica/gestione-referenti/add";
                document.getElementById('id').value = '';
                
                // Imposta valori hidden
                document.getElementById('sede_id').value = initialSedeId;
                document.getElementById('ufficio_id').value = initialUfficioId;

                loadContextInfo(societaId, initialSedeId, initialUfficioId);
            } else {
                document.getElementById('pageTitle').innerText = "Modifica Referente";
                form.action = "/anagrafica/gestione-referenti/edit";
                loadData();
            }
        });

        async function loadRoles() {
            try {
                const res = await fetch('/api/tipi-ruolo'); 
                if(res.ok) {
                    const data = await res.json();
                    const select = document.getElementById('cva_tipo_ruolo_id');
                    data.forEach(t => {
                        const option = document.createElement('option');
                        option.value = t.id;
                        option.textContent = t.valore;
                        select.appendChild(option);
                    });
                }
            } catch (e) { console.error("Errore caricamento ruoli", e); }
        }

        async function loadContextInfo(societaId, sedeId, ufficioId) {
            const items = [];
            
            if (societaId) {
                try {
                    const res = await fetch(`/api/anagrafica/societa?id=${societaId}`);
                    const data = await res.json();
                    if (data && data.length > 0) {
                        items.push({ label: 'Società', value: data[0].ragione_sociale, url: `/anagrafica/dettaglio-societa/${societaId}` });
                    }
                } catch (e) { console.error("Errore caricamento società", e); }
            }

            if (sedeId) {
                try {
                    const res = await fetch(`/api/anagrafica/sedi?id=${sedeId}`);
                    const data = await res.json();
                    if (data && data.length > 0) {
                        const s = data[0];
                        const partiIndirizzo = [s.via, s.numero_civico, s.cap, s.comune, s.provincia, s.paese].filter(p => p && String(p).trim() !== '').join(' ');
                        const tipo = s.tipo_sede_desc || s.tipo_sede || 'Sede';
                        items.push({ label: 'Sede', value: `${partiIndirizzo} (${tipo})`, url: `/anagrafica/dettaglio-sede/${sedeId}` });
                    }
                } catch (e) { console.error("Errore caricamento sede", e); }
            }

            if (ufficioId) {
                try {
                    const res = await fetch(`/api/anagrafica/uffici?id=${ufficioId}`);
                    const data = await res.json();
                    if (data && data.length > 0) {
                        const u = data[0];
                        const nome = u.nome_ufficio ? `${u.nome_ufficio} (${u.tipo_ufficio})` : u.tipo_ufficio;
                        items.push({ label: 'Ufficio', value: nome, url: `/anagrafica/ufficio/dettaglio?id=${ufficioId}&societa_id=${u.societa_id || societaId}` });
                    }
                } catch (e) { console.error("Errore caricamento ufficio", e); }
            }

            if (items.length > 0) {
                renderContext(items);
            }
        }

        function loadData() {
            fetch(`/api/anagrafica/referenti?id=${id}`)
                .then(res => res.json())
                .then(data => {
                    if (data && data.length > 0) {
                        const item = data[0];
                        document.getElementById('nome').value = item.nome || '';
                        document.getElementById('cognome').value = item.cognome || '';
                        document.getElementById('cva_tipo_ruolo_id').value = item.cva_tipo_ruolo_id || '';
                        document.getElementById('sede_id').value = item.sede_id || '';
                        document.getElementById('ufficio_id').value = item.ufficio_id || '';
                        
                        if(item.societa_id) document.getElementById('societa_id').value = item.societa_id;

                        // Context Logic for Edit
                        const items = [
                            { label: 'Società', value: item.ragione_sociale, url: `/anagrafica/dettaglio-societa/${item.societa_id}` }
                        ];
                        
                        if (item.sede_id) {
                            const indirizzo = [item.sede_via, item.sede_numero_civico, item.sede_cap, item.sede_comune, item.sede_provincia, item.sede_paese].filter(p => p && String(p).trim() !== '').join(' ');
                            const tipo = item.tipo_sede || 'Sede';
                            items.push({ label: 'Sede', value: `${indirizzo} (${tipo})`, url: `/anagrafica/dettaglio-sede/${item.sede_id}` });
                        }
                        if (item.ufficio_id) {
                            const nomeUff = item.nome_ufficio ? `${item.nome_ufficio} (${item.tipo_ufficio})` : item.tipo_ufficio;
                            items.push({ label: 'Ufficio', value: nomeUff, url: `/anagrafica/ufficio/dettaglio?id=${item.ufficio_id}&societa_id=${item.societa_id}` });
                        }
                        
                        renderContext(items);
                    } else {
                        alert("Referente non trovato.");
                    }
                })
                .catch(err => console.error("Errore caricamento dati:", err));
        }

        form.addEventListener('submit', function(e) {
            e.preventDefault();
            saveButton.disabled = true;
            saveButton.innerHTML = 'Salvataggio...';

            const formData = new URLSearchParams(new FormData(this));
            
            fetch(this.action, {
                method: 'POST',
                body: formData,
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' }
            })
            .then(res => res.json())
            .then(data => {
                if (data.error) alert("Errore: " + data.error);
                else {
                    alert(data.message);
                    if (isNew) window.close();
                }
            })
            .catch(err => alert('Errore salvataggio: ' + err))
            .finally(() => {
                saveButton.disabled = false;
                saveButton.innerHTML = 'Salva';
            });
        });

        function renderContext(items) {
            const list = document.getElementById('contextList');
            list.innerHTML = '';
            items.forEach(item => {
                const div = document.createElement('div');
                div.className = 'flex items-center gap-2';
                div.innerHTML = `
                    <span class="opacity-70 font-semibold min-w-[60px]">${item.label}:</span>
                    <a href="#" onclick="window.open('${item.url}', '_blank', 'width=1024,height=768'); return false;" class="link link-primary hover:text-primary-focus font-medium">${item.value}</a>
                `;
                list.appendChild(div);
            });
            document.getElementById('contextInfo').classList.remove('hidden');
        }
    </script>
</body>
</html>