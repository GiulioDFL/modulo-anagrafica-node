<!DOCTYPE html>
<html lang="it" data-theme="corporate">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dettaglio Società</title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.7.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-base-200 min-h-screen py-8">
    <div class="container mx-auto p-4 max-w-3xl">
        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="card-title text-2xl" id="pageTitle">Dettaglio Società</h2>
                    <button onclick="window.close()" class="btn btn-sm btn-ghost">Chiudi</button>
                </div>
                
                <form id="societaForm" autocomplete="off" class="flex flex-col gap-4">
                    <input type="hidden" id="id" name="id" value="<%= id %>">
                    
                    <div class="form-control">
                        <label for="ragione_sociale" class="label"><span class="label-text">Ragione Sociale <span class="text-error">*</span></span></label>
                        <input type="text" class="input input-bordered w-full uppercase" id="ragione_sociale" name="ragione_sociale" required oninput="this.value = this.value.toUpperCase()">
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="form-control">
                            <label for="partita_iva" class="label"><span class="label-text">Partita IVA</span></label>
                            <input type="text" class="input input-bordered w-full" id="partita_iva" name="partita_iva" maxlength="11" pattern="\d{11}" title="Deve essere composta da 11 cifre numeriche">
                        </div>
                        <div class="form-control">
                            <label for="codice_fiscale" class="label"><span class="label-text">Codice Fiscale</span></label>
                            <input type="text" class="input input-bordered w-full uppercase" id="codice_fiscale" name="codice_fiscale" minlength="11" maxlength="16" pattern="[A-Z0-9]{11,16}" title="Deve essere alfanumerico (11 o 16 caratteri)" oninput="this.value = this.value.toUpperCase()">
                        </div>
                    </div>
                    <div class="form-control">
                        <label for="codice_destinatario" class="label"><span class="label-text">Codice Destinatario</span></label>
                        <input type="text" class="input input-bordered w-full uppercase" id="codice_destinatario" name="codice_destinatario" maxlength="7" pattern="[A-Z0-9]{7}" title="Deve essere di 7 caratteri alfanumerici" oninput="this.value = this.value.toUpperCase()">
                    </div>
                    
                    <!-- Gestione Contatti -->
                    <div class="form-control">
                        <label class="label"><span class="label-text">Contatti</span></label>
                        <div class="border rounded-lg overflow-hidden">
                            <table class="table table-sm w-full">
                                <thead class="bg-base-200">
                                    <tr>
                                        <th class="w-1/4">Tipo</th>
                                        <th>Valore</th>
                                        <th class="w-16"></th>
                                    </tr>
                                </thead>
                                <tbody id="contactsList">
                                    <!-- Righe contatti generate via JS -->
                                </tbody>
                                <tfoot class="bg-base-100 border-t">
                                    <tr>
                                        <td class="p-2">
                                            <select id="newContactType" class="select select-bordered select-sm w-full">
                                                <option value="email">Email</option>
                                                <option value="pec">PEC</option>
                                                <option value="mobile">Mobile</option>
                                                <option value="phone">Telefono</option>
                                            </select>
                                        </td>
                                        <td class="p-2">
                                            <input type="text" id="newContactValue" class="input input-bordered input-sm w-full" placeholder="Inserisci contatto...">
                                        </td>
                                        <td class="p-2 text-right">
                                            <button type="button" class="btn btn-sm btn-square btn-success text-white" onclick="addNewContact()" title="Aggiungi">
                                                <i class="bi bi-plus-lg"></i>
                                            </button>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <input type="hidden" name="contatti_json" id="contatti_json">
                    </div>

                    <!-- Componente Multi-Tag per Settori -->
                    <div id="settoriContainer" class="form-control">
                    </div>

                    <div class="card-actions justify-end mt-4">
                        <button type="submit" id="saveButton" class="btn btn-success text-white">Salva</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        const id = "<%= id %>";
        const isNew = id === 'nuova';
        const form = document.getElementById('societaForm');
        const saveButton = document.getElementById('saveButton');
        let settoriControl = null;

        document.addEventListener('DOMContentLoaded', async () => {
            // Inizializzazione Componente Multi-Tag
            settoriControl = await initMultiTag({
                containerId: 'settoriContainer',
                group: 'SETTORE',
                inputName: 'cva_settore_id',
                label: 'Settori'
            });

            if (isNew) {
                document.getElementById('pageTitle').innerText = "Nuova Società";
                form.action = "/anagrafica/gestione-societa/add";
                document.getElementById('id').value = ''; // Rimuove 'nuova' per l'insert
            } else {
                document.getElementById('pageTitle').innerText = "Modifica Società";
                form.action = "/anagrafica/gestione-societa/edit";
                loadData();
            }
        });

        function loadData() {
            fetch(`/api/anagrafica/societa?id=${id}`)
                .then(res => res.json())
                .then(data => {
                    if (data && data.length > 0) {
                        const item = data[0];
                        document.getElementById('ragione_sociale').value = item.ragione_sociale;
                        document.getElementById('partita_iva').value = item.partita_iva || '';
                        document.getElementById('codice_fiscale').value = item.codice_fiscale || '';
                        document.getElementById('codice_destinatario').value = item.codice_destinatario || '';
                        
                        // Caricamento contatti esistenti
                        if (item.expand && item.expand.contatti) {
                            contactsData = Array.isArray(item.expand.contatti) ? item.expand.contatti : [item.expand.contatti];
                            // Mappiamo per sicurezza
                            contactsData = contactsData.map(c => ({ id: c.id, tipo: c.tipo, valore: c.valore }));
                            renderContacts();
                        }

                        // Popolamento Settori
                        if (item.expand && item.expand.categorie && settoriControl) {
                            const cats = Array.isArray(item.expand.categorie) ? item.expand.categorie : [item.expand.categorie];
                            const catIds = cats.map(c => c.id);
                            settoriControl.setSelection(catIds);
                        }
                    } else {
                        alert("Società non trovata.");
                    }
                });
        }

        form.addEventListener('submit', function(e) {
            e.preventDefault();

            saveButton.disabled = true;
            saveButton.innerHTML = `<span class="loading loading-spinner loading-sm"></span> Salvataggio...`;

            // Serializza i contatti nel campo hidden
            document.getElementById('contatti_json').value = JSON.stringify(contactsData);

            const formData = new URLSearchParams(new FormData(this));
            
            fetch(this.action, {
                method: 'POST',
                body: formData,
                headers: {'Content-Type': 'application/x-www-form-urlencoded'}
            })
            .then(async res => {
                // Se la risposta non è OK, gestisci l'errore
                if (!res.ok) {
                    const errorData = await res.json().catch(() => ({})); // Prova a leggere il JSON, altrimenti oggetto vuoto
                    
                    // Altri errori (es. 400 per validazione, 500 per errori server)
                    const errorMessage = errorData.error || errorData.message || `Si è verificato un errore (HTTP ${res.status}).`;
                    alert(`Errore: ${errorMessage}`);
                    
                    // Lancia un errore per interrompere la catena .then() e andare al .catch()
                    throw new Error(errorData.message || 'Errore server');
                }
                // Se la risposta è OK, procedi
                return res.json();
            })
            .then(data => {
                // Questa parte viene eseguita solo in caso di successo (res.ok)
                alert(data.message);
                if (isNew && data.id) {
                    // Reindirizza alla pagina di modifica dopo la creazione
                    window.location.href = `/anagrafica/dettaglio-societa/${data.id}`;
                }
            })
            .catch(err => {
                // Il catch serve principalmente per loggare l'errore in console.
                // L'alert all'utente è già stato gestito nel blocco .then() che controlla res.ok
                console.error('Errore durante il salvataggio:', err.message);
            })
            .finally(() => {
                saveButton.disabled = false;
                saveButton.innerHTML = 'Salva';
            });
        });

        // Componente Multi-Tag Standardizzato
        async function initMultiTag(config) {
            const { containerId, group, inputName, label } = config;
            const container = document.getElementById(containerId);
            
            // UI: Dropdown con Checkboxes per selezione multipla
            container.innerHTML = `
                <label class="label"><span class="label-text">${label}</span></label>
                <div class="dropdown w-full">
                    <div tabindex="0" role="button" class="input input-bordered w-full flex items-center justify-between h-auto min-h-[3rem] py-2" id="dropdown_btn_${inputName}">
                        <div id="selected_tags_${inputName}" class="flex flex-wrap gap-1">
                            <span class="text-gray-400">Seleziona...</span>
                        </div>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 opacity-50" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" /></svg>
                    </div>
                    <div tabindex="0" class="dropdown-content z-[1] card card-compact w-full p-2 shadow bg-base-100 border border-base-200 max-h-60 overflow-y-auto mt-1">
                        <div class="flex flex-col gap-1" id="options_container_${inputName}">
                            <div class="flex justify-center p-2"><span class="loading loading-spinner loading-sm"></span></div>
                        </div>
                    </div>
                </div>
                <div id="inputs_${inputName}"></div>
            `;
            
            const optionsContainer = document.getElementById(`options_container_${inputName}`);
            const selectedTagsContainer = document.getElementById(`selected_tags_${inputName}`);
            const inputsContainer = document.getElementById(`inputs_${inputName}`);
            let selectedIds = new Set();
            let optionsMap = new Map();

            // Carica Opzioni
            try {
                const res = await fetch(`/api/attributes/${group}`);
                const options = await res.json();
                optionsContainer.innerHTML = '';
                options.forEach(opt => {
                    optionsMap.set(String(opt.id), opt.valore);
                    
                    const label = document.createElement('label');
                    label.className = 'label cursor-pointer justify-start gap-3 hover:bg-base-200 rounded-lg p-2';
                    
                    const checkbox = document.createElement('input');
                    checkbox.type = 'checkbox';
                    checkbox.className = 'checkbox checkbox-sm checkbox-primary';
                    checkbox.value = opt.id;
                    
                    checkbox.addEventListener('change', (e) => {
                        toggleTag(e.target.value, e.target.checked);
                    });

                    const span = document.createElement('span');
                    span.className = 'label-text';
                    span.textContent = opt.valore;

                    label.appendChild(checkbox);
                    label.appendChild(span);
                    optionsContainer.appendChild(label);
                });
            } catch(e) { 
                console.error('Errore caricamento opzioni', e); 
                optionsContainer.innerHTML = '<div class="text-error p-2">Errore caricamento opzioni</div>';
            }

            // Sincronizza UI iniziale
            syncUI();

            function toggleTag(id, isChecked) {
                if (isChecked) selectedIds.add(String(id));
                else selectedIds.delete(String(id));
                syncUI();
            }

            function syncUI() {
                // Aggiorna Checkbox
                const checkboxes = optionsContainer.querySelectorAll('input[type="checkbox"]');
                checkboxes.forEach(cb => {
                    cb.checked = selectedIds.has(cb.value);
                });

                // Aggiorna Inputs Hidden
                inputsContainer.innerHTML = '';
                selectedIds.forEach(id => {
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = inputName;
                    input.value = id;
                    inputsContainer.appendChild(input);
                });

                // Aggiorna Visualizzazione Tags nel bottone
                selectedTagsContainer.innerHTML = '';
                if (selectedIds.size === 0) {
                    selectedTagsContainer.innerHTML = '<span class="text-gray-400">Seleziona...</span>';
                } else {
                    selectedIds.forEach(id => {
                        const text = optionsMap.get(id) || id;
                        const badge = document.createElement('div');
                        badge.className = 'badge badge-ghost bg-blue-50 text-blue-700 border-blue-200 h-auto py-2 pl-3 pr-2 gap-2 rounded-lg shadow-sm';
                        badge.innerHTML = `<span class="font-medium">${text}</span><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-4 h-4 stroke-current cursor-pointer hover:text-blue-900 transition-colors"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>`;
                        
                        // Gestione rimozione tag tramite icona X
                        badge.querySelector('svg').addEventListener('click', (e) => {
                            e.stopPropagation(); // Evita l'apertura/chiusura del dropdown
                            toggleTag(id, false);
                        });
                        
                        selectedTagsContainer.appendChild(badge);
                    });
                }
            }

            // API pubblica del componente
            return {
                setSelection: (ids) => {
                    selectedIds = new Set(ids.map(String));
                    syncUI();
                }
            };
        }

        // --- Gestione Contatti ---
        
        let contactsData = [];

        function renderContacts() {
            const tbody = document.getElementById('contactsList');
            tbody.innerHTML = '';
            
            contactsData.forEach((contact, index) => {
            // Icona in base al tipo
            let icon = 'bi-chat-text';
            if(contact.tipo === 'email') icon = 'bi-envelope';
            if(contact.tipo === 'pec') icon = 'bi-envelope-check';
            if(contact.tipo === 'mobile') icon = 'bi-phone';
            if(contact.tipo === 'phone') icon = 'bi-telephone';

            // Aggiungi riga visuale
            const tr = document.createElement('tr');
            tr.innerHTML = `
                <td class="capitalize"><i class="bi ${icon} mr-2 opacity-70"></i>${contact.tipo}</td>
                <td class="font-medium">${contact.valore}</td>
                <td class="text-right">
                    <button type="button" class="btn btn-xs btn-square btn-ghost text-error" onclick="removeContact(${index})">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            `;
            tbody.appendChild(tr);
            });
        }

        function addNewContact() {
            const typeSelect = document.getElementById('newContactType');
            const valueInput = document.getElementById('newContactValue');
            const tipo = typeSelect.value;
            const valore = valueInput.value.trim();

            if (!valore) return;

            // Aggiungi all'array locale
            contactsData.push({ tipo, valore });
            renderContacts();
            
            valueInput.value = ''; // Reset input
        }

        function removeContact(index) {
            contactsData.splice(index, 1);
            renderContacts();
        }
    </script>
</body>
</html>