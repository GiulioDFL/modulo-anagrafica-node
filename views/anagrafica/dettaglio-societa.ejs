<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dettaglio Società</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-color: #f8f9fa;">
    <div class="container py-5">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-bottom-0 d-flex justify-content-between align-items-center pt-3 px-4">
                <h4 class="mb-0" id="pageTitle">Dettaglio Società</h4>
                <button onclick="window.close()" class="btn btn-sm btn-light">Chiudi</button>
            </div>
            <div class="card-body p-4">
                <form id="societaForm" autocomplete="off">
                    <input type="hidden" id="id" name="id" value="<%= id %>">
                    
                    <div class="mb-3">
                        <label for="ragione_sociale" class="form-label">Ragione Sociale <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="ragione_sociale" name="ragione_sociale" required>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="partita_iva" class="form-label">Partita IVA</label>
                            <input type="text" class="form-control" id="partita_iva" name="partita_iva">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="codice_fiscale" class="form-label">Codice Fiscale</label>
                            <input type="text" class="form-control" id="codice_fiscale" name="codice_fiscale">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="codice_destinatario" class="form-label">Codice Destinatario</label>
                        <input type="text" class="form-control" id="codice_destinatario" name="codice_destinatario">
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <% if (id && id !== 'nuova') { %>
                            <a href="/anagrafica/gestione-sedi?societa_id=<%= id %>" target="_blank" class="btn btn-sm btn-primary">Sedi</a>
                        <% } %>
                        <button type="submit" id="saveButton" class="btn btn-sm btn-success">Salva</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        const id = "<%= id %>";
        const isNew = id === 'nuova';
        const form = document.getElementById('societaForm');
        const saveButton = document.getElementById('saveButton');

        document.addEventListener('DOMContentLoaded', () => {
            if (isNew) {
                document.getElementById('pageTitle').innerText = "Nuova Società";
                form.action = "/anagrafica/gestione-societa/add";
                document.getElementById('id').value = ''; // Rimuove 'nuova' per l'insert
            } else {
                document.getElementById('pageTitle').innerText = "Modifica Società";
                form.action = "/anagrafica/gestione-societa/edit";
                loadData();
            }
        });

        function loadData() {
            fetch(`/api/anagrafica/societa?id=${id}`)
                .then(res => res.json())
                .then(data => {
                    if (data && data.length > 0) {
                        const item = data[0];
                        document.getElementById('ragione_sociale').value = item.ragione_sociale;
                        document.getElementById('partita_iva').value = item.partita_iva || '';
                        document.getElementById('codice_fiscale').value = item.codice_fiscale || '';
                        document.getElementById('codice_destinatario').value = item.codice_destinatario || '';
                    } else {
                        alert("Società non trovata.");
                    }
                });
        }

        form.addEventListener('submit', function(e) {
            e.preventDefault();

            saveButton.disabled = true;
            saveButton.innerHTML = `
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                Salvataggio...
            `;

            const formData = new URLSearchParams(new FormData(this));
            
            fetch(this.action, {
                method: 'POST',
                body: formData,
                headers: {'Content-Type': 'application/x-www-form-urlencoded'}
            })
            .then(res => res.json())
            .then(data => {
                if (data.error) {
                    alert("Errore: " + data.error);
                } else {
                    alert(data.message);
                    if (isNew && data.id) {
                        window.location.href = `/anagrafica/dettaglio-societa/${data.id}`;
                    }
                }
            })
            .catch(err => {
                console.error('Errore salvataggio:', err);
                alert('Si è verificato un errore imprevisto durante il salvataggio.');
            })
            .finally(() => {
                saveButton.disabled = false;
                saveButton.innerHTML = 'Salva';
            });
        });
    </script>
</body>
</html>