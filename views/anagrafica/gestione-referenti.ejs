<!DOCTYPE html>
<html lang="it" data-theme="corporate">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Referenti</title>
    <!-- DaisyUI & Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.7.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body class="bg-base-200 min-h-screen">
    <div class="container mx-auto p-4">
        <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
            <div class="text-center md:text-left">
                <h1 class="text-2xl font-bold text-base-content">Gestione Referenti</h1>
                <div id="hierarchyInfo" class="text-sm opacity-70"></div>
            </div>
            <div class="flex gap-2">
                <a id="btnAddReferente" href="/anagrafica/gestione-referenti/dettaglio?id=nuova&societa_id=<%= societa_id %>&sede_id=<%= sede_id || '' %>&ufficio_id=<%= ufficio_id || '' %>" target="_blank" class="btn btn-sm btn-success text-white">
                    <i class="bi bi-plus-lg"></i> Nuovo Referente
                </a>
                <button onclick="window.close()" class="btn btn-sm btn-neutral">Chiudi</button>
            </div>
        </div>

        <!-- Filtri -->
        <div class="card bg-base-100 shadow-xl mb-6">
            <div class="card-body p-6">
                <form id="filterForm" class="grid grid-cols-1 md:grid-cols-2 gap-4 items-end" autocomplete="off">
                    <div class="form-control">
                        <label class="label py-0 pb-1"><span class="label-text">Cerca</span></label>
                        <input type="text" class="input input-bordered input-sm w-full" name="search" placeholder="Nome, ruolo, contatti...">
                    </div>
                    <div class="form-control">
                        <label class="label py-0 pb-1"><span class="label-text">Ruolo</span></label>
                        <div id="ruoliContainer" class="flex flex-wrap gap-x-4 gap-y-2 pt-1">
                            <!-- Checkboxes caricate via JS -->
                        </div>
                    </div>
                    <div class="md:col-span-2 flex justify-end gap-2 mt-4 border-t pt-4">
                        <button type="button" class="btn btn-sm btn-ghost" onclick="resetFilters()">Reset</button>
                        <button type="submit" class="btn btn-sm btn-primary"><i class="bi bi-search"></i> Cerca</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Header Risultati -->
        <div class="flex justify-between items-center mb-4 px-1">
            <div id="resultsCount" class="text-sm font-semibold opacity-70">In attesa di ricerca...</div>
        </div>

        <!-- Grid Risultati (Card) -->
        <div id="referentiContainer" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
            <!-- Contenuto caricato via AJAX -->
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            loadRuoli();
            loadReferenti();
        });

        function loadReferenti() {
            const urlParams = new URLSearchParams(window.location.search);
            const societaId = urlParams.get('societa_id') || '<%= societa_id %>';
            const sedeId = urlParams.get('sede_id') || '<%= sede_id || "" %>';
            const ufficioId = urlParams.get('ufficio_id') || '<%= ufficio_id || "" %>';

            const formData = new FormData(document.getElementById('filterForm'));
            const params = new URLSearchParams(formData);
            if (societaId) params.append('societa_id', societaId);
            if (sedeId) params.append('sede_id', sedeId);
            if (ufficioId) params.append('ufficio_id', ufficioId);

            // Aggiorna il link "Nuovo Referente"
            const newBtn = document.getElementById('btnAddReferente');
            if (newBtn) {
                newBtn.href = `/anagrafica/gestione-referenti/dettaglio?id=nuova&societa_id=${societaId}&sede_id=${sedeId}&ufficio_id=${ufficioId}`;
            }

            // Costruzione Titolo Breadcrumb
            if (societaId) {
                const pSocieta = fetch(`/api/anagrafica/societa?id=${societaId}`).then(res => res.json());
                
                // Fetch Ufficio per determinare eventuale Sede se non passata esplicitamente
                const pUfficio = ufficioId ? fetch(`/api/anagrafica/uffici?id=${ufficioId}`).then(res => res.json()) : Promise.resolve(null);

                pUfficio.then(dataUfficio => {
                    const u = (dataUfficio && dataUfficio.length > 0) ? dataUfficio[0] : null;
                    // Se abbiamo l'ufficio e ha una sede, ma non è nel contesto URL, usiamola
                    const currentSedeId = (u && u.sede_id && !sedeId) ? u.sede_id : sedeId;
                    const pSede = currentSedeId ? fetch(`/api/anagrafica/sedi?id=${currentSedeId}`).then(res => res.json()) : Promise.resolve(null);

                    Promise.all([pSocieta, pSede]).then(([dataSocieta, dataSede]) => {
                        if (dataSocieta && dataSocieta.length > 0) {
                            let hierarchyHtml = `Società: <a href="/anagrafica/dettaglio-societa/${dataSocieta[0].id}" target="_blank" class="link link-hover font-bold">${dataSocieta[0].ragione_sociale}</a>`;
                            
                            if (dataSede && dataSede.length > 0) {
                                const s = dataSede[0];
                                const indirizzoData = s.expand?.indirizzo || {};
                                const via = [indirizzoData.via, indirizzoData.numero_civico].filter(Boolean).join(' ');
                                const loc = [indirizzoData.cap, indirizzoData.comune, indirizzoData.provincia ? `(${indirizzoData.provincia})` : ''].filter(Boolean).join(' ');
                                const indirizzoCompleto = [via, loc].filter(Boolean).join(', ');
                                const tipo = s.expand?.categorie?.[0]?.valore || 'Sede';
                                hierarchyHtml += ` <i class="bi bi-chevron-right mx-1"></i> Sede: <a href="/anagrafica/dettaglio-sede/${s.id}" target="_blank" class="link link-hover font-bold">${indirizzoCompleto} - ${tipo}</a>`;
                            }

                            if (u) {
                                const categorieUfficio = u.expand?.categorie ? (Array.isArray(u.expand.categorie) ? u.expand.categorie : [u.expand.categorie]) : [];
                                const nomeUfficio = categorieUfficio.map(c => c.valore).join(', ') || 'Ufficio';
                                hierarchyHtml += ` <i class="bi bi-chevron-right mx-1"></i> Ufficio: <a href="/anagrafica/ufficio/dettaglio?id=${u.id}&societa_id=${u.societa_id}" target="_blank" class="link link-hover font-bold">${nomeUfficio}</a>`;
                            }
                            document.getElementById('hierarchyInfo').innerHTML = hierarchyHtml;

                            // Aggiorna il link "Nuovo Referente" con la sede dedotta dal contesto
                            if (newBtn && currentSedeId) {
                                const url = new URL(newBtn.href, window.location.origin);
                                url.searchParams.set('sede_id', currentSedeId);
                                newBtn.href = url.toString();
                            }
                        }
                    });
                });
            }

            fetch(`/api/anagrafica/referenti?${params.toString()}`)
                .then(res => res.json())
                .then(data => {
                    const container = document.getElementById('referentiContainer');
                    const countLabel = document.getElementById('resultsCount');
                    container.innerHTML = '';
                    
                    if (data.error) {
                        container.innerHTML = `<div class="col-span-full text-center py-10 text-error bg-base-100 rounded-box shadow">Errore: ${data.error}</div>`;
                        countLabel.innerText = 'Errore';
                        return;
                    }
                    if (data.length === 0) {
                        container.innerHTML = '<div class="col-span-full text-center py-10 opacity-60 bg-base-100 rounded-box shadow">Nessun referente trovato con i filtri selezionati.</div>';
                        countLabel.innerText = '0 risultati trovati';
                        return;
                    }

                    countLabel.innerText = `${data.length} risultati trovati`;

                    data.forEach(r => {
                        const persona = r.expand?.persona || {};
                        const categorie = r.expand?.categorie ? (Array.isArray(r.expand.categorie) ? r.expand.categorie : [r.expand.categorie]) : [];
                        const contatti = r.expand?.contatti ? (Array.isArray(r.expand.contatti) ? r.expand.contatti : [r.expand.contatti]) : [];
                        
                        // Dati Contesto Gerarchico
                        const societaNome = r.expand?.societa?.ragione_sociale || 'Società non definita';
                        
                        let sedeLabel = 'Sede non specificata';
                        if (r.expand?.sede) {
                            const s = r.expand.sede;
                            const ind = s.expand?.indirizzo || {};
                            const via = [ind.via, ind.numero_civico].filter(Boolean).join(' ');
                            const loc = [ind.comune, ind.provincia ? `(${ind.provincia})` : ''].filter(Boolean).join(' ');
                            sedeLabel = [via, loc].filter(Boolean).join(', ');
                        }

                        let ufficioLabel = 'Ufficio non specificato';
                        if (r.expand?.ufficio) {
                            const u = r.expand.ufficio;
                            const cats = u.expand?.categorie ? (Array.isArray(u.expand.categorie) ? u.expand.categorie : [u.expand.categorie]) : [];
                            ufficioLabel = cats.map(c => c.valore).join(', ') || 'Ufficio';
                        }

                        const card = `
                            <div class="card bg-base-100 shadow-md border border-base-200 hover:shadow-lg transition-shadow duration-200">
                                <div class="card-body p-5">
                                    <div class="flex justify-between items-start gap-2">
                                        <h2 class="card-title text-lg font-bold text-primary break-words w-full">
                                            ${persona.nome || ''} ${persona.cognome || ''}
                                        </h2>
                                    </div>
                                    
                                    <div class="flex flex-col gap-1 mb-2">
                                        <div class="text-xs text-gray-500 flex items-center gap-1" title="Società">
                                            <i class="bi bi-building"></i> ${societaNome}
                                        </div>
                                        <div class="text-xs text-gray-500 flex items-center gap-1" title="Sede">
                                            <i class="bi bi-geo-alt"></i> ${sedeLabel}
                                        </div>
                                        <div class="text-xs text-gray-500 flex items-center gap-1" title="Ufficio">
                                            <i class="bi bi-door-open"></i> ${ufficioLabel}
                                        </div>
                                    </div>

                                    <!-- Ruoli -->
                                    <div class="flex flex-wrap gap-1 mt-1">
                                        ${categorie.length > 0 ? categorie.map(cat => `<span class="badge badge-ghost bg-blue-50 text-blue-700 border-blue-100 text-xs">${cat.valore}</span>`).join('') : ''}
                                    </div>

                                    <!-- Contatti -->
                                    <div class="mt-3 space-y-1">
                                        ${contatti.length > 0 ? contatti.map(c => {
                                            let icon = 'bi-chat-text';
                                            if(c.tipo === 'email') icon = 'bi-envelope';
                                            if(c.tipo === 'pec') icon = 'bi-envelope-check';
                                            if(c.tipo === 'mobile') icon = 'bi-phone';
                                            if(c.tipo === 'phone') icon = 'bi-telephone';
                                            return `<div class="flex items-center gap-2 text-xs truncate" title="${c.tipo}: ${c.valore}">
                                                <i class="bi ${icon} opacity-70"></i> <span class="opacity-90">${c.valore}</span>
                                            </div>`;
                                        }).join('') : '<div class="text-xs italic opacity-50">Nessun contatto</div>'}
                                    </div>

                                    <!-- Azioni -->
                                    <div class="card-actions justify-end mt-4 pt-4 border-t border-base-200">
                                        <a href="/anagrafica/gestione-referenti/dettaglio?id=${r.id}" target="_blank" class="btn btn-sm btn-primary" title="Modifica"><i class="bi bi-pencil-square"></i></a>
                                        <button onclick="deleteReferente('${r.id}')" class="btn btn-sm btn-error text-white" title="Elimina">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        `;
                        container.innerHTML += card;
                    });
                })
                .catch(err => console.error('Errore caricamento:', err));
        }

        function loadRuoli() {
            fetch('/api/settings/categorie?gruppo=RUOLO')
                .then(res => res.json())
                .then(ruoli => {
                    const container = document.getElementById('ruoliContainer');
                    container.innerHTML = ''; 
                    ruoli.forEach(ruolo => {
                        container.innerHTML += `
                            <label class="cursor-pointer flex items-center gap-2 select-none">
                                <input type="checkbox" name="ruoli" value="${ruolo.id}" class="checkbox checkbox-xs checkbox-primary" />
                                <span class="label-text text-xs whitespace-nowrap" title="${ruolo.valore}">${ruolo.valore}</span>
                            </label>`;
                    });
                })
                .catch(err => console.error('Errore caricamento ruoli:', err));
        }

        document.getElementById('filterForm').addEventListener('submit', (e) => { 
            e.preventDefault(); 
            loadReferenti(); 
        });
        
        function resetFilters() { 
            document.getElementById('filterForm').reset(); 
            loadReferenti(); 
        }

        function deleteReferente(id) {
            const i = prompt("Scrivi 'elimina' per confermare:");
            if (i !== 'elimina') return;
            
            fetch('/anagrafica/gestione-referenti/delete', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ id: id, confirm_prompt: 'elimina' })
            }).then(response => {
                if (response.ok) {
                    loadReferenti(); 
                } else {
                    response.text().then(text => alert('Errore eliminazione: ' + text));
                }
            }).catch(err => {
                console.error('Errore fetch delete:', err);
                alert('Errore di rete durante l\'eliminazione.');
            });
        }
    </script>
</body>
</html>