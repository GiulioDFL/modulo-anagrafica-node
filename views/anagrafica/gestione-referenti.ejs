<!DOCTYPE html>
<html lang="it" data-theme="corporate">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Referenti</title>
    <!-- DaisyUI & Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.7.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .actions-col { white-space: nowrap; width: 1%; }
    </style>
</head>
<body class="bg-base-200 min-h-screen">
    <div class="container mx-auto p-4">
        <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
            <div class="text-center md:text-left">
                <h1 class="text-2xl font-bold text-base-content">Gestione Referenti</h1>
                <div id="hierarchyInfo" class="text-sm opacity-70"></div>
            </div>
            <div class="flex gap-2">
                <a href="/anagrafica/gestione-referenti/dettaglio?id=nuova&societa_id=<%= societa_id %>&sede_id=<%= sede_id || '' %>&ufficio_id=<%= ufficio_id || '' %>" target="_blank" class="btn btn-sm btn-success text-white">
                    <i class="bi bi-plus-lg"></i> Nuovo Referente
                </a>
                <button onclick="window.close()" class="btn btn-sm btn-neutral">Chiudi</button>
            </div>
        </div>

        <!-- Filtri -->
        <div class="card bg-base-100 shadow-xl mb-6">
            <div class="card-body p-6">
                <form id="filterForm" class="grid grid-cols-1 md:grid-cols-12 gap-4 items-end" autocomplete="off">
                    <div class="md:col-span-4">
                        <label for="search" class="label py-0 pb-1"><span class="label-text">Cerca</span></label>
                        <input type="text" class="input input-bordered input-sm w-full" id="search" name="search" placeholder="Nome, Cognome, Ruolo...">
                    </div>
                    <div class="md:col-span-8 flex justify-end gap-2 mt-2">
                        <button type="button" class="btn btn-sm btn-ghost" onclick="resetFilters()">Reset</button>
                        <button type="submit" class="btn btn-sm btn-primary"><i class="bi bi-search"></i> Cerca</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tabella -->
        <div class="card bg-base-100 shadow-xl">
            <div class="card-body p-0">
                <div class="overflow-x-auto rounded-box">
                    <table class="table table-zebra w-full">
                        <thead class="bg-base-200 text-base-content uppercase text-xs font-bold">
                            <tr>
                                <th>Nominativo</th>
                                <th>Ruolo</th>
                                <th id="th-societa">Società</th>
                                <th id="th-sede">Sede</th>
                                <th id="th-ufficio">Ufficio</th>
                                <th class="actions-col text-right pr-4">Azioni</th>
                            </tr>
                        </thead>
                        <tbody id="referenti-table-body"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        const societaId = '<%= societa_id %>';
        const sedeId = '<%= sede_id || "" %>';
        const ufficioId = '<%= ufficio_id || "" %>';

        document.addEventListener('DOMContentLoaded', loadReferenti);

        function loadReferenti() {
            const formData = new FormData(document.getElementById('filterForm'));
            const params = new URLSearchParams(formData);
            if (societaId) params.append('societa_id', societaId);
            if (sedeId) params.append('sede_id', sedeId);
            if (ufficioId) params.append('ufficio_id', ufficioId);

            // Gestione visibilità colonne Contesto
            const thSocieta = document.getElementById('th-societa');
            if (thSocieta) {
                thSocieta.style.display = (societaId || sedeId || ufficioId) ? 'none' : '';
            }
            const thSede = document.getElementById('th-sede');
            if (thSede) {
                thSede.style.display = (sedeId || ufficioId) ? 'none' : '';
            }
            const thUfficio = document.getElementById('th-ufficio');
            if (thUfficio) {
                thUfficio.style.display = ufficioId ? 'none' : '';
            }

            // Costruzione Titolo Breadcrumb
            if (societaId) {
                const pSocieta = fetch(`/api/anagrafica/societa?id=${societaId}`).then(res => res.json());
                
                // Fetch Ufficio per determinare eventuale Sede se non passata esplicitamente
                const pUfficio = ufficioId ? fetch(`/api/anagrafica/uffici?id=${ufficioId}`).then(res => res.json()) : Promise.resolve(null);

                pUfficio.then(dataUfficio => {
                    const u = (dataUfficio && dataUfficio.length > 0) ? dataUfficio[0] : null;
                    // Se abbiamo l'ufficio e ha una sede, ma non è nel contesto URL, usiamola
                    const currentSedeId = (u && u.sede_id && !sedeId) ? u.sede_id : sedeId;
                    const pSede = currentSedeId ? fetch(`/api/anagrafica/sedi?id=${currentSedeId}`).then(res => res.json()) : Promise.resolve(null);

                    Promise.all([pSocieta, pSede]).then(([dataSocieta, dataSede]) => {
                        if (dataSocieta && dataSocieta.length > 0) {
                            let hierarchyHtml = `Società: <a href="/anagrafica/dettaglio-societa/${dataSocieta[0].id}" target="_blank" class="link link-hover font-bold">${dataSocieta[0].ragione_sociale}</a>`;
                            
                            if (dataSede && dataSede.length > 0) {
                                const s = dataSede[0];
                                const partiIndirizzo = [
                                    s.via,
                                    s.numero_civico,
                                    s.cap,
                                    s.comune,
                                    s.provincia,
                                    s.paese
                                ];
                                const indirizzoCompleto = partiIndirizzo.filter(p => p && String(p).trim() !== '').join(' ');
                                const tipo = s.tipo_sede_desc || s.tipo_sede || 'Sede';
                                hierarchyHtml += ` <i class="bi bi-chevron-right mx-1"></i> Sede: <a href="/anagrafica/dettaglio-sede/${s.id}" target="_blank" class="link link-hover font-bold">${indirizzoCompleto} (${tipo})</a>`;
                            }

                            if (u) {
                                const labelUfficio = u.nome_ufficio ? `${u.nome_ufficio} (${u.tipo_ufficio})` : u.tipo_ufficio;
                                hierarchyHtml += ` <i class="bi bi-chevron-right mx-1"></i> Ufficio: <a href="/anagrafica/ufficio/dettaglio?id=${u.id}&societa_id=${u.societa_id}" target="_blank" class="link link-hover font-bold">${labelUfficio}</a>`;
                            }
                            document.getElementById('hierarchyInfo').innerHTML = hierarchyHtml;
                        }
                    });
                });
            }

            fetch(`/api/anagrafica/referenti?${params.toString()}`)
                .then(res => res.json())
                .then(data => {
                    const tbody = document.getElementById('referenti-table-body');
                    tbody.innerHTML = '';
                    
                    if (data.error) {
                        tbody.innerHTML = `<tr><td colspan="6" class="text-center py-4 text-error">Errore: ${data.error}</td></tr>`;
                        return;
                    }
                    if (data.length === 0) {
                        tbody.innerHTML = '<tr><td colspan="6" class="text-center py-4 opacity-60">Nessun referente trovato.</td></tr>';
                        return;
                    }

                    data.forEach(r => {
                        tbody.innerHTML += `
                            <tr class="hover">
                                <td class="font-bold">${r.cognome} ${r.nome}</td>
                                <td><span class="badge badge-info">${r.ruolo || '-'}</span></td>
                                ${(societaId || sedeId || ufficioId) ? '' : `<td>${r.societa_id ? `<a href="/anagrafica/dettaglio-societa/${r.societa_id}" target="_blank" class="link link-hover font-bold">${r.ragione_sociale || '-'}</a>` : (r.ragione_sociale || '-')}</td>`}
                                ${(sedeId || ufficioId) ? '' : `<td>${r.sede_id ? `<a href="/anagrafica/dettaglio-sede/${r.sede_id}" target="_blank" class="link link-hover font-bold">${r.sede_desc || r.contesto_sede || '-'}</a>` : (r.sede_desc || r.contesto_sede || '-')}</td>`}
                                ${ufficioId ? '' : `<td>${r.ufficio_id ? `<a href="/anagrafica/ufficio/dettaglio?id=${r.ufficio_id}&societa_id=${r.societa_id}" target="_blank" class="link link-hover font-bold">${r.nome_ufficio || r.contesto_ufficio || '-'}</a>` : (r.nome_ufficio || r.contesto_ufficio || '-')}</td>`}
                                <td class="actions-col text-right">
                                    <div class="flex justify-end gap-1">
                                        <a href="/anagrafica/gestione-referenti/dettaglio?id=${r.id}" target="_blank" class="btn btn-sm btn-square btn-primary" title="Dettaglio/Modifica"><i class="bi bi-pencil-square"></i></a>
                                        <button class="btn btn-sm btn-square btn-error text-white" title="Elimina" onclick="deleteReferente(${r.id})"><i class="bi bi-trash"></i></button>
                                    </div>
                                </td>
                            </tr>
                        `;
                    });
                })
                .catch(err => console.error('Errore caricamento:', err));
        }

        document.getElementById('filterForm').addEventListener('submit', (e) => { e.preventDefault(); loadReferenti(); });
        function resetFilters() { document.getElementById('filterForm').reset(); loadReferenti(); }
        function deleteReferente(id) { if(confirm('Eliminare questo referente?')) { /* Implementare chiamata API delete */ alert('Funzionalità delete da implementare'); } }
    </script>
</body>
</html>