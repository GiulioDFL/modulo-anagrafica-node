<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Referenti</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body { background-color: #f8f9fa; }
        .actions-col { white-space: nowrap; width: 1%; }
    </style>
</head>
<body class="bg-light">
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h5 mb-1 text-secondary fw-normal" style="font-family: 'Segoe UI', sans-serif;">Gestione Referenti</h1>
                <div id="hierarchyInfo" class="small text-muted"></div>
            </div>
            <div class="d-flex gap-2">
                <a href="/anagrafica/referente/dettaglio?id=nuova&societa_id=<%= societa_id %>&sede_id=<%= sede_id || '' %>&ufficio_id=<%= ufficio_id || '' %>" target="_blank" class="btn btn-sm btn-success">
                    <i class="bi bi-plus-lg"></i> Nuovo Referente
                </a>
                <button onclick="window.close()" class="btn btn-sm btn-secondary">Chiudi</button>
            </div>
        </div>

        <!-- Filtri -->
        <div class="card mb-4">
            <div class="card-body">
                <form id="filterForm" class="row g-3 align-items-end" autocomplete="off">
                    <div class="col-md-4">
                        <label for="search" class="form-label">Cerca</label>
                        <input type="text" class="form-control" id="search" name="search" placeholder="Nome, Cognome, Ruolo...">
                    </div>
                    <div class="col-md-8 text-md-end">
                        <button type="submit" class="btn btn-sm btn-primary"><i class="bi bi-search"></i> Cerca</button>
                        <button type="button" class="btn btn-sm btn-secondary" onclick="resetFilters()">Reset</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tabella -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Nominativo</th>
                                <th>Ruolo</th>
                                <th id="th-societa">Società</th>
                                <th id="th-sede">Sede</th>
                                <th id="th-ufficio">Ufficio</th>
                                <th class="actions-col">Azioni</th>
                            </tr>
                        </thead>
                        <tbody id="referenti-table-body"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const societaId = '<%= societa_id %>';
        const sedeId = '<%= sede_id || "" %>';
        const ufficioId = '<%= ufficio_id || "" %>';

        document.addEventListener('DOMContentLoaded', loadReferenti);

        function loadReferenti() {
            const formData = new FormData(document.getElementById('filterForm'));
            const params = new URLSearchParams(formData);
            if (societaId) params.append('societa_id', societaId);
            if (sedeId) params.append('sede_id', sedeId);
            if (ufficioId) params.append('ufficio_id', ufficioId);

            // Gestione visibilità colonne Contesto
            const thSocieta = document.getElementById('th-societa');
            if (thSocieta) {
                thSocieta.style.display = (societaId || sedeId || ufficioId) ? 'none' : '';
            }
            const thSede = document.getElementById('th-sede');
            if (thSede) {
                thSede.style.display = (sedeId || ufficioId) ? 'none' : '';
            }
            const thUfficio = document.getElementById('th-ufficio');
            if (thUfficio) {
                thUfficio.style.display = ufficioId ? 'none' : '';
            }

            // Costruzione Titolo Breadcrumb
            if (societaId) {
                const pSocieta = fetch(`/api/anagrafica/societa?id=${societaId}`).then(res => res.json());
                
                // Fetch Ufficio per determinare eventuale Sede se non passata esplicitamente
                const pUfficio = ufficioId ? fetch(`/api/anagrafica/uffici?id=${ufficioId}`).then(res => res.json()) : Promise.resolve(null);

                pUfficio.then(dataUfficio => {
                    const u = (dataUfficio && dataUfficio.length > 0) ? dataUfficio[0] : null;
                    // Se abbiamo l'ufficio e ha una sede, ma non è nel contesto URL, usiamola
                    const currentSedeId = (u && u.sede_id && !sedeId) ? u.sede_id : sedeId;
                    const pSede = currentSedeId ? fetch(`/api/anagrafica/sedi?id=${currentSedeId}`).then(res => res.json()) : Promise.resolve(null);

                    Promise.all([pSocieta, pSede]).then(([dataSocieta, dataSede]) => {
                        if (dataSocieta && dataSocieta.length > 0) {
                            let hierarchyHtml = `Società: <a href="/anagrafica/dettaglio-societa/${dataSocieta[0].id}" target="_blank" class="text-decoration-none fw-bold">${dataSocieta[0].ragione_sociale}</a>`;
                            
                            if (dataSede && dataSede.length > 0) {
                                const s = dataSede[0];
                                const partiIndirizzo = [
                                    s.via,
                                    s.numero_civico,
                                    s.cap,
                                    s.comune,
                                    s.provincia,
                                    s.paese
                                ];
                                const indirizzoCompleto = partiIndirizzo.filter(p => p && String(p).trim() !== '').join(' ');
                                const tipo = s.tipo_sede_desc || s.tipo_sede || 'Sede';
                                hierarchyHtml += ` <i class="bi bi-chevron-right mx-1"></i> Sede: <a href="/anagrafica/dettaglio-sede/${s.id}" target="_blank" class="text-decoration-none fw-bold">${indirizzoCompleto} (${tipo})</a>`;
                            }

                            if (u) {
                                const labelUfficio = u.nome_ufficio ? `${u.nome_ufficio} (${u.tipo_ufficio})` : u.tipo_ufficio;
                                hierarchyHtml += ` <i class="bi bi-chevron-right mx-1"></i> Ufficio: <a href="/anagrafica/ufficio/dettaglio?id=${u.id}&societa_id=${u.societa_id}" target="_blank" class="text-decoration-none fw-bold">${labelUfficio}</a>`;
                            }
                            document.getElementById('hierarchyInfo').innerHTML = hierarchyHtml;
                        }
                    });
                });
            }

            fetch(`/api/anagrafica/referenti?${params.toString()}`)
                .then(res => res.json())
                .then(data => {
                    const tbody = document.getElementById('referenti-table-body');
                    tbody.innerHTML = '';
                    
                    if (data.error) {
                        tbody.innerHTML = `<tr><td colspan="5" class="text-center text-danger">Errore: ${data.error}</td></tr>`;
                        return;
                    }
                    if (data.length === 0) {
                        tbody.innerHTML = '<tr><td colspan="5" class="text-center text-muted">Nessun referente trovato.</td></tr>';
                        return;
                    }

                    data.forEach(r => {
                        tbody.innerHTML += `
                            <tr>
                                <td>${r.id}</td>
                                <td class="fw-bold">${r.cognome} ${r.nome}</td>
                                <td><span class="badge bg-info text-dark">${r.ruolo || '-'}</span></td>
                                ${(societaId || sedeId || ufficioId) ? '' : `<td>${r.societa_id ? `<a href="/anagrafica/dettaglio-societa/${r.societa_id}" target="_blank" class="text-decoration-none fw-bold">${r.ragione_sociale || '-'}</a>` : (r.ragione_sociale || '-')}</td>`}
                                ${(sedeId || ufficioId) ? '' : `<td>${r.sede_id ? `<a href="/anagrafica/dettaglio-sede/${r.sede_id}" target="_blank" class="text-decoration-none fw-bold">${r.sede_desc || r.contesto_sede || '-'}</a>` : (r.sede_desc || r.contesto_sede || '-')}</td>`}
                                ${ufficioId ? '' : `<td>${r.ufficio_id ? `<a href="/anagrafica/ufficio/dettaglio?id=${r.ufficio_id}&societa_id=${r.societa_id}" target="_blank" class="text-decoration-none fw-bold">${r.nome_ufficio || r.contesto_ufficio || '-'}</a>` : (r.nome_ufficio || r.contesto_ufficio || '-')}</td>`}
                                <td class="actions-col">
                                    <a href="/anagrafica/referente/dettaglio?id=${r.id}&societa_id=${r.societa_id}" target="_blank" class="btn btn-sm btn-primary me-1" title="Dettaglio/Modifica"><i class="bi bi-pencil-square"></i></a>
                                    <button class="btn btn-sm btn-danger" title="Elimina" onclick="deleteReferente(${r.id})"><i class="bi bi-trash"></i></button>
                                </td>
                            </tr>
                        `;
                    });
                })
                .catch(err => console.error('Errore caricamento:', err));
        }

        document.getElementById('filterForm').addEventListener('submit', (e) => { e.preventDefault(); loadReferenti(); });
        function resetFilters() { document.getElementById('filterForm').reset(); loadReferenti(); }
        function deleteReferente(id) { if(confirm('Eliminare questo referente?')) { /* Implementare chiamata API delete */ alert('Funzionalità delete da implementare'); } }
    </script>
</body>
</html>