<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Uffici</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .actions-col { white-space: nowrap; width: 1%; }
    </style>
</head>
<body class="bg-light">
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h5 mb-1 text-secondary fw-normal" style="font-family: 'Segoe UI', sans-serif;">Gestione Uffici</h1>
                <div id="hierarchyInfo" class="small text-muted"></div>
            </div>
            <div class="d-flex gap-2">
                <a href="/anagrafica/ufficio/dettaglio?id=nuova&societa_id=<%= societa_id %>&sede_id=<%= sede_id || '' %>" target="_blank" class="btn btn-sm btn-success">
                    <i class="bi bi-plus-lg"></i> Nuovo Ufficio
                </a>
                <button onclick="window.close()" class="btn btn-sm btn-secondary">Chiudi</button>
            </div>
        </div>

        <!-- Filtri -->
        <div class="card mb-4">
            <div class="card-body">
                <form id="filterForm" class="row g-3 align-items-end" autocomplete="off">
                    <div class="col-md-4">
                        <label for="search" class="form-label">Cerca</label>
                        <input type="text" class="form-control" id="search" name="search" placeholder="Nome ufficio, Tipo...">
                    </div>
                    <div class="col-md-8 text-md-end">
                        <button type="submit" class="btn btn-sm btn-primary"><i class="bi bi-search"></i> Cerca</button>
                        <button type="button" class="btn btn-sm btn-secondary" onclick="resetFilters()">Reset</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tabella -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Nome Ufficio</th>
                                <th>Tipo</th>
                                <th id="th-collocazione">Collocazione</th>
                                <th class="actions-col">Azioni</th>
                            </tr>
                        </thead>
                        <tbody id="uffici-table-body"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const societaId = '<%= societa_id %>';
        const sedeId = '<%= sede_id || "" %>';

        document.addEventListener('DOMContentLoaded', loadUffici);

        function loadUffici() {
            const formData = new FormData(document.getElementById('filterForm'));
            const params = new URLSearchParams(formData);
            if (societaId) params.append('societa_id', societaId);
            if (sedeId) params.append('sede_id', sedeId);

            // Gestione visibilità colonna Collocazione
            const thCollocazione = document.getElementById('th-collocazione');
            if (thCollocazione) {
                thCollocazione.style.display = sedeId ? 'none' : '';
            }

            // Caricamento info contesto (Società/Sede) per il titolo
            if (societaId) {
                const pSocieta = fetch(`/api/anagrafica/societa?id=${societaId}`).then(res => res.json());
                const pSede = sedeId ? fetch(`/api/anagrafica/sedi?id=${sedeId}`).then(res => res.json()) : Promise.resolve(null);

                Promise.all([pSocieta, pSede])
                    .then(([dataSocieta, dataSede]) => {
                        if (dataSocieta && dataSocieta.length > 0) {
                            let hierarchyHtml = `Società: <a href="/anagrafica/dettaglio-societa/${dataSocieta[0].id}" target="_blank" class="text-decoration-none fw-bold">${dataSocieta[0].ragione_sociale}</a>`;
                            
                            if (dataSede && dataSede.length > 0) {
                                const s = dataSede[0];
                                const partiIndirizzo = [
                                    s.via || s.indirizzo,
                                    s.numero_civico,
                                    s.cap,
                                    s.comune || s.citta,
                                    s.provincia,
                                    s.paese
                                ];
                                const indirizzoCompleto = partiIndirizzo.filter(p => p && String(p).trim() !== '').join(' ');
                                const tipo = s.tipo_sede_desc || s.tipo_sede || 'Sede';
                                
                                hierarchyHtml += ` <i class="bi bi-chevron-right mx-1"></i> Sede: <a href="/anagrafica/dettaglio-sede/${s.id}" target="_blank" class="text-decoration-none fw-bold">${indirizzoCompleto} - ${tipo}</a>`;
                            }
                            document.getElementById('hierarchyInfo').innerHTML = hierarchyHtml;
                        }
                    });
            }

            fetch(`/api/anagrafica/uffici?${params.toString()}`)
                .then(res => res.json())
                .then(data => {
                    const tbody = document.getElementById('uffici-table-body');
                    tbody.innerHTML = '';
                    
                    if (data.error) {
                        tbody.innerHTML = `<tr><td colspan="5" class="text-center text-danger">Errore: ${data.error}</td></tr>`;
                        return;
                    }
                    if (data.length === 0) {
                        tbody.innerHTML = '<tr><td colspan="5" class="text-center text-muted">Nessun ufficio trovato.</td></tr>';
                        return;
                    }

                    data.forEach(u => {
                        tbody.innerHTML += `
                            <tr>
                                <td>${u.id}</td>
                                <td>${u.nome_ufficio || '-'}</td>
                                <td><span class="badge bg-info text-dark">${u.tipo_ufficio}</span></td>
                                ${sedeId ? '' : `<td>${u.collocazione}</td>`}
                                <td class="actions-col">
                                    <a href="/anagrafica/ufficio/dettaglio?id=${u.id}&societa_id=${u.societa_id}" target="_blank" class="btn btn-sm btn-primary me-1" title="Dettaglio/Modifica"><i class="bi bi-pencil-square"></i></a>
                                    <a href="/anagrafica/gestione-referenti?societa_id=${u.societa_id}&ufficio_id=${u.id}" target="_blank" class="btn btn-sm btn-warning me-1" title="Gestione Referenti"><i class="bi bi-people"></i></a>
                                    <form action="/anagrafica/gestione-uffici/delete" method="POST" class="d-inline" onsubmit="return confirmDelete(this);">
                                        <input type="hidden" name="id" value="${u.id}">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Elimina"><i class="bi bi-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        `;
                    });
                })
                .catch(err => console.error('Errore caricamento:', err));
        }

        document.getElementById('filterForm').addEventListener('submit', (e) => { e.preventDefault(); loadUffici(); });
        
        function resetFilters() { 
            document.getElementById('filterForm').reset(); 
            loadUffici(); 
        }

        function confirmDelete(form) {
            if (confirm('Sei sicuro di voler eliminare questo ufficio?')) {
                // Gestione eliminazione via fetch per non ricaricare o gestire redirect
                // Ma per coerenza con gli altri file che usano form submit standard (o quasi), qui usiamo fetch per semplicità
                // Dato che il form ha action, intercettiamo
                event.preventDefault();
                const formData = new FormData(form);
                const data = Object.fromEntries(formData.entries());
                
                fetch('/anagrafica/gestione-uffici/delete', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                })
                .then(res => res.json())
                .then(res => {
                    if (res.error) alert(res.error);
                    else loadUffici();
                })
                .catch(err => alert('Errore eliminazione: ' + err));
            }
            return false;
        }
    </script>
</body>
</html>