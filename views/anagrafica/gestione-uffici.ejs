<!DOCTYPE html>
<html lang="it" data-theme="corporate">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Uffici</title>
    <!-- DaisyUI & Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.7.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .actions-col { white-space: nowrap; width: 1%; }
    </style>
</head>
<body class="bg-base-200 min-h-screen">
    <div class="container mx-auto p-4">
        <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
            <div class="text-center md:text-left">
                <h1 class="text-2xl font-bold text-base-content">Gestione Uffici</h1>
                <div id="hierarchyInfo" class="text-sm opacity-70"></div>
            </div>
            <div class="flex gap-2">
                <a href="/anagrafica/ufficio/dettaglio?id=nuova&societa_id=<%= societa_id %>&sede_id=<%= sede_id || '' %>" target="_blank" class="btn btn-sm btn-success text-white">
                    <i class="bi bi-plus-lg"></i> Nuovo Ufficio
                </a>
                <button onclick="window.close()" class="btn btn-sm btn-neutral">Chiudi</button>
            </div>
        </div>

        <!-- Filtri -->
        <div class="card bg-base-100 shadow-xl mb-6">
            <div class="card-body p-6">
                <form id="filterForm" class="grid grid-cols-1 md:grid-cols-12 gap-4 items-end" autocomplete="off">
                    <div class="md:col-span-4">
                        <label for="search" class="label py-0 pb-1"><span class="label-text">Cerca</span></label>
                        <input type="text" class="input input-bordered input-sm w-full" id="search" name="search" placeholder="Nome ufficio, Tipo...">
                    </div>
                    <div class="md:col-span-8 flex justify-end gap-2 mt-2">
                        <button type="button" class="btn btn-sm btn-ghost" onclick="resetFilters()">Reset</button>
                        <button type="submit" class="btn btn-sm btn-primary"><i class="bi bi-search"></i> Cerca</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tabella -->
        <div class="card bg-base-100 shadow-xl">
            <div class="card-body p-0">
                <div class="overflow-x-auto rounded-box">
                    <table class="table table-zebra w-full">
                        <thead class="bg-base-200 text-base-content uppercase text-xs font-bold">
                            <tr>
                                <th id="th-societa">Società</th>
                                <th>Nome Ufficio</th>
                                <th>Tipo</th>
                                <th id="th-collocazione">Collocazione</th>
                                <th class="actions-col text-right pr-4">Azioni</th>
                            </tr>
                        </thead>
                        <tbody id="uffici-table-body"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        const societaId = '<%= societa_id %>';
        const sedeId = '<%= sede_id || "" %>';

        document.addEventListener('DOMContentLoaded', loadUffici);

        function loadUffici() {
            const formData = new FormData(document.getElementById('filterForm'));
            const params = new URLSearchParams(formData);
            if (societaId) params.append('societa_id', societaId);
            if (sedeId) params.append('sede_id', sedeId);

            // Gestione visibilità colonna Collocazione
            const thCollocazione = document.getElementById('th-collocazione');
            if (thCollocazione) {
                thCollocazione.style.display = sedeId ? 'none' : '';
            }
            
            // Gestione visibilità colonna Società
            const thSocieta = document.getElementById('th-societa');
            if (thSocieta) {
                thSocieta.style.display = (societaId || sedeId) ? 'none' : '';
            }

            // Caricamento info contesto (Società/Sede) per il titolo
            if (societaId) {
                const pSocieta = fetch(`/api/anagrafica/societa?id=${societaId}`).then(res => res.json());
                const pSede = sedeId ? fetch(`/api/anagrafica/sedi?id=${sedeId}`).then(res => res.json()) : Promise.resolve(null);

                Promise.all([pSocieta, pSede])
                    .then(([dataSocieta, dataSede]) => {
                        if (dataSocieta && dataSocieta.length > 0) {
                            let hierarchyHtml = `Società: <a href="/anagrafica/dettaglio-societa/${dataSocieta[0].id}" target="_blank" class="link link-hover font-bold">${dataSocieta[0].ragione_sociale}</a>`;
                            
                            if (dataSede && dataSede.length > 0) {
                                const s = dataSede[0];
                                const indirizzo = [s.via || s.indirizzo, s.numero_civico].filter(x => x && String(x).trim()).join(' ');
                                const localita = [s.cap, s.comune || s.citta, s.provincia ? `(${s.provincia})` : ''].filter(x => x && String(x).trim()).join(' ');
                                const indirizzoCompleto = [indirizzo, localita].filter(x => x && String(x).trim()).join(', ');
                                const tipo = s.tipo_sede_desc || s.tipo_sede || 'Sede';
                                
                                hierarchyHtml += ` <i class="bi bi-chevron-right mx-1"></i> Sede: <a href="/anagrafica/dettaglio-sede/${s.id}" target="_blank" class="link link-hover font-bold">${indirizzoCompleto} - ${tipo}</a>`;
                            }
                            document.getElementById('hierarchyInfo').innerHTML = hierarchyHtml;
                        }
                    });
            }

            fetch(`/api/anagrafica/uffici?${params.toString()}`)
                .then(res => res.json())
                .then(data => {
                    const tbody = document.getElementById('uffici-table-body');
                    tbody.innerHTML = '';
                    
                    if (data.error) {
                        tbody.innerHTML = `<tr><td colspan="5" class="text-center py-4 text-error">Errore: ${data.error}</td></tr>`;
                        return;
                    }
                    if (data.length === 0) {
                        tbody.innerHTML = '<tr><td colspan="5" class="text-center py-4 opacity-60">Nessun ufficio trovato.</td></tr>';
                        return;
                    }

                    data.forEach(u => {
                        const tipoSede = u.sede_tipo || u.tipo_sede || u.tipo_sede_desc || '';

                        // Costruzione etichetta Collocazione (Sede)
                        const indirizzo = [u.sede_via || u.via || u.indirizzo, u.sede_numero_civico || u.numero_civico].filter(x => x && String(x).trim()).join(' ');
                        const localita = [u.sede_cap || u.cap, u.sede_comune || u.comune || u.citta, (u.sede_provincia || u.provincia) ? `(${u.sede_provincia || u.provincia})` : ''].filter(x => x && String(x).trim()).join(' ');
                        let indirizzoCompleto = [indirizzo, localita].filter(x => x && String(x).trim()).join(', ');

                        if (!indirizzoCompleto) {
                            indirizzoCompleto = u.collocazione || '-';
                            // Se usiamo il fallback e questo inizia con il tipo (es. "Sede Legale - ..."), lo rimuoviamo per riformattare correttamente
                            if (tipoSede && indirizzoCompleto.startsWith(tipoSede + ' - ')) {
                                indirizzoCompleto = indirizzoCompleto.substring(tipoSede.length + 3);
                            }
                        }

                        const labelSede = tipoSede ? `${indirizzoCompleto} - ${tipoSede}` : indirizzoCompleto;

                        tbody.innerHTML += `
                            <tr class="hover">
                                ${ (societaId || sedeId) ? '' : `<td>${u.societa_id ? `<a href="/anagrafica/dettaglio-societa/${u.societa_id}" target="_blank" class="link link-hover font-bold">${u.ragione_sociale || '-'}</a>` : (u.ragione_sociale || '-')}</td>` }
                                <td class="font-bold">${u.nome_ufficio || '-'}</td>
                                <td><span class="badge badge-info">${u.tipo_ufficio}</span></td>
                                ${sedeId ? '' : `<td>${u.sede_id ? `<a href="/anagrafica/dettaglio-sede/${u.sede_id}" target="_blank" class="link link-hover font-bold">${labelSede}</a>` : labelSede}</td>`}
                                <td class="actions-col text-right">
                                    <div class="flex justify-end gap-1">
                                        <a href="/anagrafica/ufficio/dettaglio?id=${u.id}&societa_id=${u.societa_id}" target="_blank" class="btn btn-sm btn-square btn-primary" title="Dettaglio/Modifica"><i class="bi bi-pencil-square"></i></a>
                                        <a href="/anagrafica/gestione-referenti?societa_id=${u.societa_id}&ufficio_id=${u.id}" target="_blank" class="btn btn-sm btn-square btn-warning text-white" title="Gestione Referenti"><i class="bi bi-people"></i></a>
                                        <form action="/anagrafica/gestione-uffici/delete" method="POST" class="inline-block" onsubmit="return confirmDelete(this);">
                                            <input type="hidden" name="id" value="${u.id}">
                                            <button type="submit" class="btn btn-sm btn-square btn-error text-white" title="Elimina"><i class="bi bi-trash"></i></button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        `;
                    });
                })
                .catch(err => console.error('Errore caricamento:', err));
        }

        document.getElementById('filterForm').addEventListener('submit', (e) => { e.preventDefault(); loadUffici(); });
        
        function resetFilters() { 
            document.getElementById('filterForm').reset(); 
            loadUffici(); 
        }

        function confirmDelete(form) {
            if (confirm('Sei sicuro di voler eliminare questo ufficio?')) {
                // Gestione eliminazione via fetch per non ricaricare o gestire redirect
                // Ma per coerenza con gli altri file che usano form submit standard (o quasi), qui usiamo fetch per semplicità
                // Dato che il form ha action, intercettiamo
                event.preventDefault();
                const formData = new FormData(form);
                const data = Object.fromEntries(formData.entries());
                
                fetch('/anagrafica/gestione-uffici/delete', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                })
                .then(res => res.json())
                .then(res => {
                    if (res.error) alert(res.error);
                    else loadUffici();
                })
                .catch(err => alert('Errore eliminazione: ' + err));
            }
            return false;
        }
    </script>
</body>
</html>