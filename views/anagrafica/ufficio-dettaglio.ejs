<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dettaglio Ufficio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-color: #f8f9fa;">
    <div class="container py-5">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-bottom-0 d-flex justify-content-between align-items-center pt-3 px-4">
                <h4 class="mb-0" id="pageTitle">Dettaglio Ufficio</h4>
                <button onclick="window.close()" class="btn btn-sm btn-light">Chiudi</button>
            </div>
            <div class="card-body p-4">
                <form id="ufficioForm" autocomplete="off">
                    <input type="hidden" id="id" name="id" value="<%= id %>">
                    <!-- Campi nascosti per il contesto -->
                    <input type="hidden" id="societa_id" name="societa_id" value="<%= societa_id %>">

                    <div class="mb-3">
                        <label for="nome_ufficio" class="form-label">Nome Ufficio</label>
                        <input type="text" class="form-control" id="nome_ufficio" name="nome_ufficio">
                    </div>

                    <div class="mb-3">
                        <label for="cva_tipo_ufficio_id" class="form-label">Tipo Ufficio <span class="text-danger">*</span></label>
                        <select class="form-select" id="cva_tipo_ufficio_id" name="cva_tipo_ufficio_id" required>
                            <option value="">Seleziona Tipo...</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="sede_id" class="form-label">Sede (Opzionale)</label>
                        <select class="form-select" id="sede_id" name="sede_id">
                            <option value="">Intera Società</option>
                        </select>
                    </div>

                    <div class="alert alert-light border mt-4">
                        <small class="text-muted">
                            <strong>Contesto:</strong> 
                            Società: <span id="lbl_societa">Caricamento...</span>
                        </small>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <button type="submit" id="saveButton" class="btn btn-sm btn-success">Salva</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const id = "<%= id %>";
        const isNew = id === 'nuova';
        const form = document.getElementById('ufficioForm');
        const saveButton = document.getElementById('saveButton');

        document.addEventListener('DOMContentLoaded', async () => {
            await loadDropdowns();
            
            if (isNew) {
                document.getElementById('pageTitle').innerText = "Nuovo Ufficio";
                form.action = "/anagrafica/gestione-uffici/add";
                document.getElementById('id').value = '';
                
                const socId = document.getElementById('societa_id').value;
                if (socId) {
                    await loadSedi(socId);
                    loadCompanyInfo(socId);
                    document.getElementById('sede_id').value = "<%= sede_id || '' %>";
                }
            } else {
                document.getElementById('pageTitle').innerText = "Modifica Ufficio";
                form.action = "/anagrafica/gestione-uffici/edit";
                loadData();
            }
        });

        async function loadDropdowns() {
            const res = await fetch('/api/tipi-ufficio');
            const data = await res.json();
            const select = document.getElementById('cva_tipo_ufficio_id');
            data.forEach(t => {
                const option = document.createElement('option');
                option.value = t.id;
                option.textContent = t.valore;
                select.appendChild(option);
            });
        }

        async function loadSedi(societaId) {
            if (!societaId) return;
            try {
                const res = await fetch(`/api/anagrafica/sedi?societa_id=${societaId}`);
                if (res.ok) {
                    const data = await res.json();
                    const select = document.getElementById('sede_id');
                    select.innerHTML = '<option value="">Intera Società</option>';
                    data.forEach(s => {
                        const option = document.createElement('option');
                        option.value = s.id;
                        const partiIndirizzo = [
                            s.via || s.indirizzo,
                            s.numero_civico,
                            s.cap,
                            s.comune || s.citta,
                            s.provincia,
                            s.paese
                        ];
                        const indirizzoCompleto = partiIndirizzo.filter(p => p && String(p).trim() !== '').join(' ');
                        const tipo = s.tipo_sede_desc || s.tipo_sede || 'Sede';
                        option.textContent = `${indirizzoCompleto} - ${tipo}`;
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error("Errore caricamento sedi:", error);
            }
        }

        function loadCompanyInfo(societaId) {
            if (!societaId) return;
            fetch(`/api/anagrafica/societa?id=${societaId}`)
                .then(res => res.json())
                .then(data => {
                    if (data && data.length > 0) {
                        document.getElementById('lbl_societa').innerText = data[0].ragione_sociale;
                    }
                })
                .catch(err => console.error("Errore caricamento società:", err));
        }

        function loadData() {
            // Passiamo societa_id se presente, altrimenti l'API ora supporta il caricamento solo per ID
            const societaId = document.getElementById('societa_id').value;
            let url = `/api/anagrafica/uffici?id=${id}`;
            if (societaId) url += `&societa_id=${societaId}`;

            fetch(url)
                .then(res => res.json())
                .then(async data => {
                    if (data && data.length > 0) {
                        const item = data[0];
                        document.getElementById('nome_ufficio').value = item.nome_ufficio || '';
                        document.getElementById('cva_tipo_ufficio_id').value = item.cva_tipo_ufficio_id;
                        // Aggiorna i hidden fields se necessario (es. se aperti da link diretto senza contesto)
                        document.getElementById('societa_id').value = item.societa_id;
                        
                        await loadSedi(item.societa_id);
                        loadCompanyInfo(item.societa_id);
                        
                        document.getElementById('sede_id').value = item.sede_id || '';
                    } else {
                        alert("Ufficio non trovato.");
                    }
                });
        }

        form.addEventListener('submit', function(e) {
            e.preventDefault();
            saveButton.disabled = true;
            saveButton.innerHTML = 'Salvataggio...';

            const formData = new URLSearchParams(new FormData(this)); // Usa URLSearchParams per x-www-form-urlencoded
            
            fetch(this.action, {
                method: 'POST',
                body: formData, // Invia come form data standard
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' } // Importante per il body parser standard
            })
            .then(res => res.json())
            .then(data => {
                if (data.error) alert("Errore: " + data.error);
                else {
                    alert(data.message);
                    if (isNew) window.close();
                }
            })
            .catch(err => alert('Errore salvataggio: ' + err))
            .finally(() => {
                saveButton.disabled = false;
                saveButton.innerHTML = 'Salva';
            });
        });
    </script>
</body>
</html>