<!DOCTYPE html>
<html lang="it" data-theme="corporate">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dettaglio Ufficio</title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.7.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-base-200 min-h-screen py-8">
    <div class="container mx-auto p-4 max-w-3xl">
        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="card-title text-2xl" id="pageTitle">Dettaglio Ufficio</h2>
                    <button onclick="window.close()" class="btn btn-sm btn-ghost">Chiudi</button>
                </div>
                
                <div id="contextInfo" class="alert bg-base-200 text-sm mb-4 hidden flex-col items-start gap-2">
                    <div class="font-bold">Contesto:</div>
                    <div id="contextList" class="flex flex-col gap-1 w-full pl-2 border-l-2 border-base-300"></div>
                </div>

                <form id="ufficioForm" autocomplete="off" class="flex flex-col gap-4">
                    <input type="hidden" id="id" name="id" value="<%= id %>">
                    <!-- Campi nascosti per il contesto -->
                    <% if (id === 'nuova') { %>
                    <input type="hidden" id="societa_id" name="societa_id" value="<%= societa_id %>">
                    <% } %>

                    <div class="form-control">
                        <label for="nome_ufficio" class="label"><span class="label-text">Nome Ufficio</span></label>
                        <input type="text" class="input input-bordered w-full" id="nome_ufficio" name="nome_ufficio">
                    </div>

                    <div class="form-control">
                        <label for="cva_tipo_ufficio_id" class="label"><span class="label-text">Tipo Ufficio <span class="text-error">*</span></span></label>
                        <select class="select select-bordered w-full" id="cva_tipo_ufficio_id" name="cva_tipo_ufficio_id" required>
                            <option value="">Seleziona Tipo...</option>
                        </select>
                    </div>

                    <% if (id === 'nuova') { %>
                    <div class="form-control">
                        <label for="sede_id" class="label"><span class="label-text">Sede (Opzionale)</span></label>
                        <select class="select select-bordered w-full" id="sede_id" name="sede_id">
                            <option value="">Intera Società</option>
                        </select>
                    </div>
                    <% } %>

                    <div class="card-actions justify-end mt-4">
                        <button type="submit" id="saveButton" class="btn btn-success text-white">Salva</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        const id = "<%= id %>";
        const isNew = id === 'nuova';
        const form = document.getElementById('ufficioForm');
        const saveButton = document.getElementById('saveButton');

        document.addEventListener('DOMContentLoaded', async () => {
            await loadDropdowns();
            
            if (isNew) {
                document.getElementById('pageTitle').innerText = "Nuovo Ufficio";
                form.action = "/anagrafica/gestione-uffici/add";
                document.getElementById('id').value = '';
                
                const socId = document.getElementById('societa_id').value;
                if (socId) {
                    await loadSedi(socId);
                    const socName = await getCompanyName(socId);
                    
                    const contextItems = [
                        { label: 'Società', value: socName, url: `/anagrafica/dettaglio-societa/${socId}` }
                    ];
                    
                    const sedeIdParam = "<%= sede_id || '' %>";
                    
                    if (sedeIdParam) {
                        document.getElementById('sede_id').value = sedeIdParam;
                        const sedeSelect = document.getElementById('sede_id');
                        const selectedOption = sedeSelect.options[sedeSelect.selectedIndex];
                        if (selectedOption) {
                            contextItems.push({ label: 'Sede', value: selectedOption.text, url: `/anagrafica/dettaglio-sede/${sedeIdParam}` });
                            sedeSelect.closest('.form-control').classList.add('hidden');
                        }
                    }
                    
                    renderContext(contextItems);
                }
            } else {
                document.getElementById('pageTitle').innerText = "Modifica Ufficio";
                form.action = "/anagrafica/gestione-uffici/edit";
                loadData();
            }
        });

        async function loadDropdowns() {
            const res = await fetch('/api/tipi-ufficio');
            const data = await res.json();
            const select = document.getElementById('cva_tipo_ufficio_id');
            data.forEach(t => {
                const option = document.createElement('option');
                option.value = t.id;
                option.textContent = t.valore;
                select.appendChild(option);
            });
        }

        async function loadSedi(societaId) {
            if (!societaId) return;
            try {
                const res = await fetch(`/api/anagrafica/sedi?societa_id=${societaId}`);
                if (res.ok) {
                    const data = await res.json();
                    const select = document.getElementById('sede_id');
                    select.innerHTML = '<option value="">Intera Società</option>';
                    data.forEach(s => {
                        const option = document.createElement('option');
                        option.value = s.id;
                        const partiIndirizzo = [
                            s.via || s.indirizzo,
                            s.numero_civico,
                            s.cap,
                            s.comune || s.citta,
                            s.provincia,
                            s.paese
                        ];
                        const indirizzoCompleto = partiIndirizzo.filter(p => p && String(p).trim() !== '').join(' ');
                        const tipo = s.tipo_sede_desc || s.tipo_sede || 'Sede';
                        option.textContent = `${indirizzoCompleto} - ${tipo}`;
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error("Errore caricamento sedi:", error);
            }
        }

        async function getCompanyName(societaId) {
            if (!societaId) return;
            try {
                const res = await fetch(`/api/anagrafica/societa?id=${societaId}`);
                const data = await res.json();
                if (data && data.length > 0) return data[0].ragione_sociale;
            } catch (err) { console.error("Errore caricamento società:", err); }
            return '';
        }

        function loadData() {
            // Caricamento solo per ID (le associazioni sono immutabili)
            const url = `/api/anagrafica/uffici?id=${id}`;

            fetch(url)
                .then(res => res.json())
                .then(async data => {
                    if (data && data.length > 0) {
                        const item = data[0];
                        document.getElementById('nome_ufficio').value = item.nome_ufficio || '';
                        document.getElementById('cva_tipo_ufficio_id').value = item.cva_tipo_ufficio_id;
                        
                        // Context Logic for Edit
                        const contextItems = [
                            { label: 'Società', value: item.ragione_sociale, url: `/anagrafica/dettaglio-societa/${item.societa_id}` }
                        ];
                        
                        if (item.sede_id) {
                            contextItems.push({ label: 'Sede', value: item.collocazione, url: `/anagrafica/dettaglio-sede/${item.sede_id}` });
                        }
                        renderContext(contextItems);
                    } else {
                        alert("Ufficio non trovato.");
                    }
                });
        }

        form.addEventListener('submit', function(e) {
            e.preventDefault();
            saveButton.disabled = true;
            saveButton.innerHTML = 'Salvataggio...';

            const formData = new URLSearchParams(new FormData(this)); // Usa URLSearchParams per x-www-form-urlencoded
            
            fetch(this.action, {
                method: 'POST',
                body: formData, // Invia come form data standard
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' } // Importante per il body parser standard
            })
            .then(res => res.json())
            .then(data => {
                if (data.error) alert("Errore: " + data.error);
                else {
                    alert(data.message);
                    if (isNew) window.close();
                }
            })
            .catch(err => alert('Errore salvataggio: ' + err))
            .finally(() => {
                saveButton.disabled = false;
                saveButton.innerHTML = 'Salva';
            });
        });

        function renderContext(items) {
            const list = document.getElementById('contextList');
            list.innerHTML = '';
            items.forEach(item => {
                const div = document.createElement('div');
                div.className = 'flex items-center gap-2';
                div.innerHTML = `
                    <span class="opacity-70 font-semibold min-w-[60px]">${item.label}:</span>
                    <a href="#" onclick="window.open('${item.url}', '_blank', 'width=1024,height=768'); return false;" class="link link-primary hover:text-primary-focus font-medium">${item.value}</a>
                `;
                list.appendChild(div);
            });
            document.getElementById('contextInfo').classList.remove('hidden');
        }
    </script>
</body>
</html>