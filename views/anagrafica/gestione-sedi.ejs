<!DOCTYPE html>
<html lang="it" data-theme="corporate">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Sedi</title>
    <!-- DaisyUI & Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.7.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .actions-col {
            white-space: nowrap;
            width: 1%;
        }
    </style>
</head>
<body class="bg-base-200 min-h-screen">
    <div class="container mx-auto p-4">
        <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
            <div class="text-center md:text-left">
                <h1 class="text-2xl font-bold text-base-content">Gestione Sedi</h1>
                <div id="hierarchyInfo" class="text-sm opacity-70"></div>
            </div>
            <div class="flex gap-2">
                <a href="/anagrafica/dettaglio-sede/nuova" target="_blank" class="btn btn-sm btn-success text-white">
                    <i class="bi bi-plus-lg"></i> Nuova Sede
                </a>
                <button onclick="window.close()" class="btn btn-sm btn-neutral">Chiudi</button>
            </div>
        </div>

        <!-- Filtri -->
        <div class="card bg-base-100 shadow-xl mb-6">
            <div class="card-body p-6">
                <form id="filterForm" class="grid grid-cols-1 md:grid-cols-12 gap-4 items-end" autocomplete="off">
                    <div class="md:col-span-4">
                        <label for="search" class="label py-0 pb-1"><span class="label-text">Cerca</span></label>
                        <input type="text" class="input input-bordered input-sm w-full" id="search" name="search" placeholder="Indirizzo, Comune, Tipo...">
                    </div>
                    <div class="md:col-span-8 flex justify-end gap-2 mt-2">
                        <button type="button" class="btn btn-sm btn-ghost" onclick="resetFilters()">Reset</button>
                        <button type="submit" class="btn btn-sm btn-primary"><i class="bi bi-search"></i> Cerca</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tabella -->
        <div class="card bg-base-100 shadow-xl">
            <div class="card-body p-0">
                <div class="overflow-x-auto rounded-box">
                    <table class="table table-zebra w-full">
                        <thead class="bg-base-200 text-base-content uppercase text-xs font-bold">
                            <tr>
                                <th id="th-societa">Società</th>
                                <th>Tipi</th>
                                <th>Indirizzo</th>
                                <th class="actions-col text-right pr-4">Azioni</th>
                            </tr>
                        </thead>
                        <tbody id="sediTableBody"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Caricamento Dropdown all'avvio
        document.addEventListener('DOMContentLoaded', () => {
            loadSedi();
        });

        function loadSedi() {
            const urlParams = new URLSearchParams(window.location.search);
            const societaId = urlParams.get('societa_id');
            
            const formData = new FormData(document.getElementById('filterForm'));
            const params = new URLSearchParams(formData);
            if (societaId) params.append('societa_id', societaId);

            // Gestione visibilità colonna Società
            const thSocieta = document.getElementById('th-societa');
            if (thSocieta) {
                thSocieta.style.display = societaId ? 'none' : '';
            }

            // Aggiorna il link "Nuova Sede" per includere la società se presente
            const newBtn = document.querySelector('a[href*="/anagrafica/dettaglio-sede/nuova"]');
            newBtn.href = societaId ? `/anagrafica/dettaglio-sede/nuova?societa_id=${societaId}` : `/anagrafica/dettaglio-sede/nuova`;

            if (societaId) {
                fetch(`/api/anagrafica/societa?id=${societaId}`)
                    .then(res => res.json())
                    .then(data => {
                        if (data && data.length > 0) {
                            document.getElementById('hierarchyInfo').innerHTML = `Società: <a href="/anagrafica/dettaglio-societa/${data[0].id}" target="_blank" class="link link-hover font-bold">${data[0].ragione_sociale}</a>`;
                        }
                    });
            }

            fetch(`/api/anagrafica/sedi?${params.toString()}`)
                .then(res => res.json())
                .then(data => {
                    const tbody = document.getElementById('sediTableBody');
                    tbody.innerHTML = '';
                    if (data.error) {
                        tbody.innerHTML = `<tr><td colspan="4" class="text-center py-4 text-error">Errore: ${data.error}</td></tr>`;
                        return;
                    }
                    if(data.length === 0) {
                        tbody.innerHTML = '<tr><td colspan="4" class="text-center py-4 opacity-60">Nessuna sede trovata.</td></tr>';
                        return;
                    }
                    data.forEach(item => {
                        const itemJson = JSON.stringify(item).replace(/"/g, '&quot;');
                        const indirizzo = [item.via, item.numero_civico].filter(x => x).join(' ');
                        const localita = [item.cap, item.comune, item.provincia ? `(${item.provincia})` : ''].filter(x => x).join(' ');
                        const indirizzoCompleto = [indirizzo, localita].filter(x => x).join(', ');

                        const tipiSedeHtml = (item.tipi_sede || '')
                            .split(', ')
                            .filter(tag => tag)
                            .map(tag => `<span class="badge badge-ghost bg-blue-50 text-blue-700 border-blue-200 h-auto py-1 px-2 rounded-lg text-xs">${tag}</span>`)
                            .join('');

                        tbody.innerHTML += `
                            <tr class="hover">
                                ${societaId ? '' : `<td>${item.societa_id ? `<a href="/anagrafica/dettaglio-societa/${item.societa_id}" target="_blank" class="link link-hover font-bold">${item.ragione_sociale || '-'}</a>` : (item.ragione_sociale || '-')}</td>`}
                                <td><div class="flex flex-wrap gap-1">${tipiSedeHtml || '-'}</div></td>
                                <td class="font-bold">${indirizzoCompleto}</td>
                                <td class="actions-col text-right">
                                    <div class="flex justify-end gap-1">
                                        <a href="/anagrafica/dettaglio-sede/${item.id}?societa_id=${societaId}" target="_blank" class="btn btn-sm btn-square btn-primary" title="Dettaglio/Modifica"><i class="bi bi-pencil-square"></i></a>
                                        <a href="/anagrafica/gestione-uffici?societa_id=${societaId}&sede_id=${item.id}" target="_blank" class="btn btn-sm btn-square btn-neutral" title="Gestione Uffici Sede">
                                            <i class="bi bi-building"></i>
                                        </a>
                                        <a href="/anagrafica/gestione-referenti?societa_id=${societaId}&sede_id=${item.id}" target="_blank" class="btn btn-sm btn-square btn-warning text-white" title="Gestione Referenti Sede">
                                            <i class="bi bi-people"></i>
                                        </a>
                                        <button onclick="deleteSede(${item.id})" class="btn btn-sm btn-square btn-error text-white" title="Elimina"><i class="bi bi-trash"></i></button>
                                    </div>
                                </td>
                            </tr>`;
                    });
                });
        }

        document.getElementById('filterForm').addEventListener('submit', (e) => { e.preventDefault(); loadSedi(); });
        function resetFilters() { document.getElementById('filterForm').reset(); loadSedi(); }
        
        function deleteSede(id) {
            const i = prompt("Scrivi 'elimina' per confermare:");
            if (i !== 'elimina') return;
            
            fetch('/anagrafica/gestione-sedi/delete', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ id: id, confirm_prompt: i })
            }).then(() => loadSedi());
        }
    </script>
</body>
</html>
