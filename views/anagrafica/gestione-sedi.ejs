<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Sedi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .actions-col { white-space: nowrap; width: 1%; }
    </style>
</head>
<body class="bg-light">
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h5 mb-0 text-secondary fw-normal" style="font-family: 'Segoe UI', sans-serif;" id="pageTitle">Gestione Sedi</h1>
            <div class="d-flex gap-2">
                <a href="/anagrafica/dettaglio-sede/nuova" target="_blank" class="btn btn-sm btn-success">
                    <i class="bi bi-plus-lg"></i> Nuova Sede
                </a>
                <button onclick="window.close()" class="btn btn-sm btn-secondary">Chiudi</button>
            </div>
        </div>

        <!-- Filtri -->
        <div class="card mb-4">
            <div class="card-body">
                <form id="filterForm" class="row g-3 align-items-end" autocomplete="off">
                    <div class="col-md-4">
                        <label for="search" class="form-label">Cerca</label>
                        <input type="text" class="form-control" id="search" name="search" placeholder="Indirizzo, Comune, Tipo...">
                    </div>
                    <div class="col-md-8 text-md-end">
                        <button type="submit" class="btn btn-sm btn-primary"><i class="bi bi-search"></i> Cerca</button>
                        <button type="button" class="btn btn-sm btn-secondary" onclick="resetFilters()">Reset</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tabella -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Tipo Sede</th>
                                <th>Indirizzo</th>
                                <th>Comune</th>
                                <th class="actions-col">Azioni</th>
                            </tr>
                        </thead>
                        <tbody id="sediTableBody"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Caricamento Dropdown all'avvio
        document.addEventListener('DOMContentLoaded', () => {
            loadSedi();
        });

        function loadSedi() {
            const urlParams = new URLSearchParams(window.location.search);
            const societaId = urlParams.get('societa_id');
            
            const formData = new FormData(document.getElementById('filterForm'));
            const params = new URLSearchParams(formData);
            if (societaId) params.append('societa_id', societaId);

            // Aggiorna il link "Nuova Sede" per includere la societÃ  se presente
            const newBtn = document.querySelector('a[href*="/anagrafica/dettaglio-sede/nuova"]');
            newBtn.href = societaId ? `/anagrafica/dettaglio-sede/nuova?societa_id=${societaId}` : `/anagrafica/dettaglio-sede/nuova`;

            if (societaId) {
                fetch(`/api/anagrafica/societa?id=${societaId}`)
                    .then(res => res.json())
                    .then(data => {
                        if (data && data.length > 0) {
                            document.getElementById('pageTitle').innerHTML = `Gestione Sedi - <a href="/anagrafica/dettaglio-societa/${data[0].id}" target="_blank" class="text-decoration-none">${data[0].ragione_sociale}</a>`;
                        }
                    });
            }

            fetch(`/api/anagrafica/sedi?${params.toString()}`)
                .then(res => res.json())
                .then(data => {
                    const tbody = document.getElementById('sediTableBody');
                    tbody.innerHTML = '';
                    if (data.error) {
                        tbody.innerHTML = `<tr><td colspan="4" class="text-center text-danger">Errore: ${data.error}</td></tr>`;
                        return;
                    }
                    if(data.length === 0) {
                        tbody.innerHTML = '<tr><td colspan="4" class="text-center text-muted">Nessuna sede trovata.</td></tr>';
                        return;
                    }
                    data.forEach(item => {
                        const itemJson = JSON.stringify(item).replace(/"/g, '&quot;');
                        tbody.innerHTML += `
                            <tr>
                                <td><span class="badge bg-info text-dark">${item.tipo_sede}</span></td>
                                <td>${item.via || ''} ${item.numero_civico || ''}</td>
                                <td>${item.cap || ''} ${item.comune || ''} (${item.provincia || ''})</td>
                                <td class="actions-col">
                                    <a href="/anagrafica/dettaglio-sede/${item.id}?societa_id=${societaId}" target="_blank" class="btn btn-sm btn-primary me-1" title="Dettaglio/Modifica"><i class="bi bi-pencil-square"></i></a>
                                    <a href="/anagrafica/gestione-uffici?societa_id=${societaId}&sede_id=${item.id}" target="_blank" class="btn btn-sm btn-secondary me-1" title="Gestione Uffici Sede">
                                        <i class="bi bi-building"></i>
                                    </a>
                                    <a href="/anagrafica/gestione-referenti?societa_id=${societaId}&sede_id=${item.id}" target="_blank" class="btn btn-sm btn-warning me-1" title="Gestione Referenti Sede">
                                        <i class="bi bi-people"></i>
                                    </a>
                                    <form action="/anagrafica/gestione-sedi/delete" method="POST" class="d-inline" onsubmit="return confirmDelete(this);">
                                        <input type="hidden" name="id" value="${item.id}">
                                        <input type="hidden" name="confirm_prompt">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Elimina"><i class="bi bi-trash"></i></button>
                                    </form>
                                </td>
                            </tr>`;
                    });
                });
        }

        document.getElementById('filterForm').addEventListener('submit', (e) => { e.preventDefault(); loadSedi(); });
        function resetFilters() { document.getElementById('filterForm').reset(); loadSedi(); }
        function confirmDelete(f) { const i = prompt("Scrivi 'elimina' per confermare:"); if(i==='elimina'){ f.confirm_prompt.value=i; return true; } return false; }
    </script>
</body>
</html>
