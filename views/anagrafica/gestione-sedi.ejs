<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Sedi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .table-hover tbody tr:hover { background-color: rgba(0,0,0,.03); }
        .actions-col { white-space: nowrap; width: 1%; }
    </style>
</head>
<body class="bg-light">
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0 text-gray-800">Gestione Sedi</h1>
            <a href="/anagrafica/dettaglio-sede/nuova" target="_blank" class="btn btn-success">
                <i class="bi bi-plus-lg"></i> Nuova Sede
            </a>
        </div>

        <!-- Filtri -->
        <div class="card shadow mb-4">
            <div class="card-body">
                <form id="filterForm" class="row g-3" autocomplete="off">
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="search" placeholder="Cerca per Società o Comune...">
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Cerca</button>
                        <button type="button" class="btn btn-secondary" onclick="resetFilters()">Reset</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tabella -->
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Società</th>
                                <th>Tipo Sede</th>
                                <th>Indirizzo</th>
                                <th>Comune</th>
                                <th class="actions-col">Azioni</th>
                            </tr>
                        </thead>
                        <tbody id="sediTableBody"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Caricamento Dropdown all'avvio
        document.addEventListener('DOMContentLoaded', () => {
            loadSedi();
        });

        function loadSedi() {
            const params = new URLSearchParams(new FormData(document.getElementById('filterForm'))).toString();
            fetch(`/api/anagrafica/sedi?${params}`)
                .then(res => res.json())
                .then(data => {
                    const tbody = document.getElementById('sediTableBody');
                    tbody.innerHTML = '';
                    if(data.length === 0) {
                        tbody.innerHTML = '<tr><td colspan="5" class="text-center text-muted">Nessuna sede trovata.</td></tr>';
                        return;
                    }
                    data.forEach(item => {
                        const itemJson = JSON.stringify(item).replace(/"/g, '&quot;');
                        tbody.innerHTML += `
                            <tr>
                                <td class="fw-bold"><a href="/anagrafica/dettaglio-societa/${item.societa_id}" target="_blank" class="text-decoration-none">${item.ragione_sociale}</a></td>
                                <td><span class="badge bg-info text-dark">${item.tipo_sede}</span></td>
                                <td>${item.via || ''} ${item.numero_civico || ''}</td>
                                <td>${item.cap || ''} ${item.comune || ''} (${item.provincia || ''})</td>
                                <td class="actions-col">
                                    <a href="/anagrafica/dettaglio-sede/${item.id}" target="_blank" class="btn btn-sm btn-primary me-1"><i class="bi bi-pencil-square"></i></a>
                                    <form action="/anagrafica/gestione-sedi/delete" method="POST" class="d-inline" onsubmit="return confirmDelete(this);">
                                        <input type="hidden" name="id" value="${item.id}">
                                        <input type="hidden" name="confirm_prompt">
                                        <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                                    </form>
                                </td>
                            </tr>`;
                    });
                });
        }

        document.getElementById('filterForm').addEventListener('submit', (e) => { e.preventDefault(); loadSedi(); });
        function resetFilters() { document.getElementById('filterForm').reset(); loadSedi(); }
        function confirmDelete(f) { const i = prompt("Scrivi 'elimina' per confermare:"); if(i==='elimina'){ f.confirm_prompt.value=i; return true; } return false; }
    </script>
</body>
</html>
