<!DOCTYPE html>
<html lang="it" data-theme="corporate">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Sedi</title>
    <!-- DaisyUI & Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.7.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .actions-col {
            white-space: nowrap;
            width: 1%;
        }
    </style>
</head>
<body class="bg-base-200 min-h-screen">
    <div class="container mx-auto p-4">
        <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
            <div class="text-center md:text-left">
                <h1 class="text-2xl font-bold text-base-content">Gestione Sedi</h1>
                <div id="hierarchyInfo" class="text-sm opacity-70"></div>
            </div>
            <div class="flex gap-2">
                <a href="/anagrafica/dettaglio-sede/nuova" target="_blank" class="btn btn-sm btn-success text-white">
                    <i class="bi bi-plus-lg"></i> Nuova Sede
                </a>
                <button onclick="window.close()" class="btn btn-sm btn-neutral">Chiudi</button>
            </div>
        </div>

        <!-- Filtri -->
        <div class="card bg-base-100 shadow-xl mb-6">
            <div class="card-body p-6">
                <form id="filterForm" class="grid grid-cols-1 md:grid-cols-2 gap-4 items-end" autocomplete="off">
                    <div class="form-control">
                        <label class="label py-0 pb-1"><span class="label-text">Indirizzo</span></label>
                        <input type="text" class="input input-bordered input-sm w-full" name="search" placeholder="Via, comune, CAP...">
                    </div>
                    <div class="form-control">
                        <label class="label py-0 pb-1"><span class="label-text">Tipo Sede</span></label>
                        <div id="tipiSedeContainer" class="flex flex-wrap gap-x-4 gap-y-2 pt-1">
                            <!-- Checkboxes caricate via JS -->
                        </div>
                    </div>
                    <div class="md:col-span-2 flex justify-end gap-2 mt-4 border-t pt-4">
                        <button type="button" class="btn btn-sm btn-ghost" onclick="resetFilters()">Reset</button>
                        <button type="submit" class="btn btn-sm btn-primary"><i class="bi bi-search"></i> Cerca</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Header Risultati -->
        <div class="flex justify-between items-center mb-4 px-1">
            <div id="resultsCount" class="text-sm font-semibold opacity-70">In attesa di ricerca...</div>
        </div>

        <!-- Grid Risultati (Card) -->
        <div id="sediContainer" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
            <!-- Contenuto caricato via AJAX -->
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            loadTipiSede();
            loadSedi();
        });

        function loadSedi() {
            const urlParams = new URLSearchParams(window.location.search);
            const societaId = urlParams.get('societa_id');
            
            const formData = new FormData(document.getElementById('filterForm'));
            const params = new URLSearchParams(formData);
            if (societaId) params.append('societa_id', societaId);

            // Aggiorna il link "Nuova Sede" per includere la società se presente
            const newBtn = document.querySelector('a[href*="/anagrafica/dettaglio-sede/nuova"]');
            newBtn.href = societaId ? `/anagrafica/dettaglio-sede/nuova?societa_id=${societaId}` : `/anagrafica/dettaglio-sede/nuova`;

            if (societaId) {
                fetch(`/api/anagrafica/societa?id=${societaId}`)
                    .then(res => res.json())
                    .then(data => {
                        if (data && data.length > 0) {
                            document.getElementById('hierarchyInfo').innerHTML = `Società: <a href="/anagrafica/dettaglio-societa/${data[0].id}" target="_blank" class="link link-hover font-bold">${data[0].ragione_sociale}</a>`;
                        }
                    });
            }

            fetch(`/api/anagrafica/sedi?${params.toString()}`)
                .then(res => res.json())
                .then(data => {
                    const container = document.getElementById('sediContainer');
                    const countLabel = document.getElementById('resultsCount');
                    container.innerHTML = '';

                    if (data.error) {
                        container.innerHTML = `<div class="col-span-full text-center py-10 text-error bg-base-100 rounded-box shadow">Errore: ${data.error}</div>`;
                        countLabel.innerText = 'Errore';
                        return;
                    }
                    if(data.length === 0) {
                        container.innerHTML = '<div class="col-span-full text-center py-10 opacity-60 bg-base-100 rounded-box shadow">Nessuna sede trovata con i filtri selezionati.</div>';
                        countLabel.innerText = '0 risultati trovati';
                        return;
                    }

                    countLabel.innerText = `${data.length} risultati trovati`;

                    data.forEach(item => {
                        const societaNome = item.expand?.societa?.ragione_sociale || '';
                        const indirizzoData = item.expand?.indirizzo || {};
                        const via = [indirizzoData.via, indirizzoData.numero_civico].filter(Boolean).join(' ');
                        const localita = [indirizzoData.cap, indirizzoData.comune, indirizzoData.provincia ? `(${indirizzoData.provincia})` : ''].filter(Boolean).join(' ');
                        const indirizzoCompleto = [via, localita].filter(Boolean).join(', ') || 'Indirizzo non specificato';

                        const categorie = item.expand?.categorie ? (Array.isArray(item.expand.categorie) ? item.expand.categorie : [item.expand.categorie]) : [];
                        const contatti = item.expand?.contatti ? (Array.isArray(item.expand.contatti) ? item.expand.contatti : [item.expand.contatti]) : [];

                        const card = `
                            <div class="card bg-base-100 shadow-md border border-base-200 hover:shadow-lg transition-shadow duration-200">
                                <div class="card-body p-5">
                                    <div class="flex justify-between items-start gap-2">
                                        <h2 class="card-title text-lg font-bold text-primary break-words w-full">${indirizzoCompleto}</h2>
                                    </div>

                                    ${societaNome ? `<div class="text-xs text-gray-500 mb-2 flex items-center gap-1"><i class="bi bi-building"></i> ${societaNome}</div>` : ''}

                                    <!-- Tipi Sede -->
                                    <div class="flex flex-wrap gap-1 mt-3">
                                        ${categorie.length > 0 ? categorie.map(cat => `<span class="badge badge-ghost bg-blue-50 text-blue-700 border-blue-100 text-xs">${cat.valore}</span>`).join('') : '<span class="text-xs italic opacity-50">Nessun tipo</span>'}
                                    </div>

                                    <!-- Contatti -->
                                    <div class="mt-3 space-y-1">
                                        ${contatti.length > 0 ? contatti.map(c => {
                                            let icon = 'bi-chat-text';
                                            if(c.tipo === 'email') icon = 'bi-envelope';
                                            if(c.tipo === 'pec') icon = 'bi-envelope-check';
                                            if(c.tipo === 'mobile') icon = 'bi-phone';
                                            if(c.tipo === 'phone') icon = 'bi-telephone';
                                            return `<div class="flex items-center gap-2 text-xs truncate" title="${c.tipo}: ${c.valore}">
                                                <i class="bi ${icon} opacity-70"></i> <span class="opacity-90">${c.valore}</span>
                                            </div>`;
                                        }).join('') : '<div class="text-xs italic opacity-50">Nessun contatto</div>'}
                                    </div>

                                    <!-- Azioni -->
                                    <div class="card-actions justify-end mt-4 pt-4 border-t border-base-200">
                                        <div class="join">
                                            <a href="/anagrafica/dettaglio-sede/${item.id}?societa_id=${item.societa}&is_legal=${item.is_legal}" target="_blank" class="btn btn-sm btn-primary join-item" title="Modifica"><i class="bi bi-pencil-square"></i></a>
                                            <a href="/anagrafica/gestione-uffici?societa_id=${item.societa}&sede_id=${item.id}" target="_blank" class="btn btn-sm btn-neutral join-item" title="Uffici"><i class="bi bi-building"></i></a>
                                            <a href="/anagrafica/gestione-referenti?societa_id=${item.societa}&sede_id=${item.id}" target="_blank" class="btn btn-sm btn-warning text-white join-item" title="Referenti"><i class="bi bi-people"></i></a>
                                        </div>
                                        
                                        <button onclick="deleteSede('${item.id}')" class="btn btn-sm btn-error text-white" title="Elimina">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </div>
                        `;
                        container.innerHTML += card;
                    });
                });
        }

        function loadTipiSede() {
            fetch('/api/settings/categorie?gruppo=SEDE')
                .then(res => res.json())
                .then(tipi => {
                    const container = document.getElementById('tipiSedeContainer');
                    container.innerHTML = ''; // Pulisce opzioni esistenti
                    tipi.forEach(tipo => {
                        container.innerHTML += `
                            <label class="cursor-pointer flex items-center gap-2 select-none">
                                <input type="checkbox" name="tipi_sede" value="${tipo.id}" class="checkbox checkbox-xs checkbox-primary" />
                                <span class="label-text text-xs whitespace-nowrap" title="${tipo.valore}">${tipo.valore}</span>
                            </label>`;
                    });
                })
                .catch(err => console.error('Errore caricamento tipi sede:', err));
        }

        document.getElementById('filterForm').addEventListener('submit', (e) => { 
            e.preventDefault(); 
            loadSedi(); 
        });

        function resetFilters() { 
            document.getElementById('filterForm').reset(); 
            loadSedi(); 
        }
        
        function deleteSede(id) {
            const i = prompt("Scrivi 'elimina' per confermare:");
            if (i !== 'elimina') return;
            
            fetch('/anagrafica/gestione-sedi/delete', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ id: id, confirm_prompt: 'elimina' })
            }).then(response => {
                if (response.ok) {
                    loadSedi(); // Ricarica i dati in caso di successo
                } else {
                    response.text().then(text => alert('Errore eliminazione: ' + text));
                }
            }).catch(err => {
                console.error('Errore fetch delete:', err);
                alert('Errore di rete durante l\'eliminazione.');
            });
        }
    </script>
</body>
</html>
