<!DOCTYPE html>
<html lang="it" data-theme="corporate">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dettaglio Sede</title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.7.2/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="bg-base-200 min-h-screen py-8">
    <div class="container mx-auto p-4 max-w-3xl">
        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="card-title text-2xl" id="pageTitle">Dettaglio Sede</h2>
                    <button onclick="window.close()" class="btn btn-sm btn-ghost">Chiudi</button>
                </div>
                
                <div id="contextInfo" class="alert bg-base-200 text-sm mb-4 hidden flex-col items-start gap-2">
                    <div class="font-bold">Contesto:</div>
                    <div id="contextList" class="flex flex-col gap-1 w-full pl-2 border-l-2 border-base-300"></div>
                </div>

                <form id="sediForm" autocomplete="off" class="flex flex-col gap-4">
                    <input type="hidden" id="id" name="id" value="<%= id %>">
                    <input type="hidden" id="indirizzo_id" name="indirizzo_id">
                    <input type="hidden" id="is_legal_original" name="is_legal_original" value="false">
                    
                    <div class="form-control">
                        <label class="label"><span class="label-text">Società <span class="text-error">*</span></span></label>
                        <select class="select select-bordered w-full" id="societa_id" name="societa_id" required></select>
                    </div>

                    <div class="form-control">
                        <label class="label"><span class="label-text">Tipo Sede <span class="text-error">*</span></span></label>
                        <select class="select select-bordered w-full" id="tipo_sede_id" name="tipo_sede_id" required>
                            <option disabled selected value="">Caricamento...</option>
                        </select>
                    </div>

                    <div class="divider">Indirizzo</div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-12 gap-4">
                        <div class="md:col-span-8 form-control">
                            <label class="label"><span class="label-text">Via</span></label>
                            <input type="text" class="input input-bordered w-full" id="via" name="via">
                        </div>
                        <div class="md:col-span-4 form-control">
                            <label class="label"><span class="label-text">Civico</span></label>
                            <input type="text" class="input input-bordered w-full" id="numero_civico" name="numero_civico">
                        </div>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-12 gap-4">
                        <div class="md:col-span-3 form-control">
                            <label class="label"><span class="label-text">CAP</span></label>
                            <input type="text" class="input input-bordered w-full" id="cap" name="cap">
                        </div>
                        <div class="md:col-span-5 form-control">
                            <label class="label"><span class="label-text">Comune</span></label>
                            <input type="text" class="input input-bordered w-full" id="comune" name="comune">
                        </div>
                        <div class="md:col-span-4 form-control">
                            <label class="label"><span class="label-text">Provincia</span></label>
                            <input type="text" class="input input-bordered w-full" id="provincia" name="provincia">
                        </div>
                    </div>
                    <div class="form-control">
                        <label class="label"><span class="label-text">Paese <span class="text-error">*</span></span></label>
                        <input type="text" class="input input-bordered w-full" id="paese" name="paese" value="IT" required>
                    </div>

                    <!-- Gestione Contatti -->
                    <div class="form-control">
                        <label class="label font-semibold"><span class="label-text">Contatti</span></label>
                        <div class="bg-base-100 border border-base-300 rounded-xl overflow-hidden shadow-sm">
                            <table class="table table-sm w-full">
                                <thead class="bg-base-200/50 text-base-content/70">
                                    <tr>
                                        <th class="w-[180px]">Tipo</th>
                                        <th>Valore</th>
                                        <th class="w-14 text-center">Azioni</th>
                                    </tr>
                                </thead>
                                <tbody id="contactsList" class="divide-y divide-base-200">
                                    <!-- Righe contatti generate via JS -->
                                </tbody>
                                <tfoot class="bg-base-50 border-t border-base-200">
                                    <tr>
                                        <td class="p-2">
                                            <div class="join w-full">
                                                <div class="join-item flex items-center justify-center bg-base-200 px-3 border border-base-300 border-r-0 rounded-l-lg">
                                                    <i id="newContactIcon" class="bi bi-envelope text-lg opacity-70"></i>
                                                </div>
                                                <select id="newContactType" class="select select-bordered select-sm join-item w-full focus:outline-none" onchange="updateNewContactIcon(this.value)">
                                                    <option value="email">Email</option>
                                                    <option value="pec">PEC</option>
                                                    <option value="mobile">Mobile</option>
                                                    <option value="phone">Telefono</option>
                                                </select>
                                            </div>
                                        </td>
                                        <td class="p-2">
                                            <input type="text" id="newContactValue" class="input input-bordered input-sm w-full" placeholder="Inserisci contatto..." onkeypress="handleEnter(event)">
                                        </td>
                                        <td class="p-2 text-center">
                                            <button type="button" class="btn btn-sm btn-square btn-primary text-white shadow-sm" onclick="addNewContact()" title="Aggiungi">
                                                <i class="bi bi-plus-lg text-lg font-bold"></i>
                                            </button>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <input type="hidden" name="contatti_json" id="contatti_json">
                    </div>

                    <!-- Componente Multi-Tag per Funzioni -->
                    <div id="funzioniContainer" class="form-control">
                    </div>

                    <div class="card-actions justify-end mt-4">
                        <button type="submit" id="saveButton" class="btn btn-success text-white">Salva</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Errore Servizio Verifica -->
    <dialog id="serviceErrorModal" class="modal">
        <div class="modal-box">
            <h3 class="font-bold text-lg text-warning">Servizio di Verifica Non Disponibile</h3>
            <p class="py-4">Ci scusiamo, il servizio di verifica dell'indirizzo non è attualmente disponibile.</p>
            <p class="font-bold">È comunque possibile forzare il salvataggio.</p>
            <div class="modal-action">
                <form method="dialog">
                    <button class="btn btn-neutral">Annulla</button>
                </form>
                <button type="button" class="btn btn-error text-white" id="btnForceSave">Forza Salvataggio</button>
            </div>
        </div>
    </dialog>

    <!-- Modal Esito Verifica AI -->
    <dialog id="aiResultModal" class="modal">
        <div class="modal-box">
            <h3 class="font-bold text-lg">Esito Verifica Indirizzo</h3>

            <div class="divider text-sm mt-4">Dati Inseriti</div>
            <div id="userInputData" class="text-sm p-3 bg-base-200 rounded-lg font-mono break-words"></div>

            <div class="divider text-sm">Risultato Verifica</div>
            <div id="aiResultContent" class="py-4 px-4 rounded-lg whitespace-pre-wrap border text-sm"></div>

            <div class="modal-action">
                <form method="dialog">
                    <button class="btn btn-ghost" onclick="setButtonLoading(false)">Annulla</button>
                </form>
                <button type="button" class="btn btn-success text-white" id="btnAiConfirm">Conferma e Salva</button>
            </div>
        </div>
    </dialog>

    <script>
        const id = "<%= id %>";
        const isNew = id === 'nuova';
        const form = document.getElementById('sediForm');
        const saveButton = document.getElementById('saveButton');
        const serviceErrorModal = document.getElementById('serviceErrorModal');
        
        let funzioniControl = null;
        let contactsData = [];


        function setButtonLoading(isLoading, text = 'Salvataggio...') {
            if (isLoading) {
                saveButton.disabled = true;
                saveButton.innerHTML = `
                    <span class="loading loading-spinner loading-sm"></span>
                    ${text}
                `;
            } else {
                saveButton.disabled = false;
                saveButton.innerHTML = 'Salva';
            }
        }

        // Gestione pulsante "Forza Salvataggio"
        document.getElementById('btnForceSave').addEventListener('click', async () => {
            serviceErrorModal.close();
            await submitData();
        });

        // Gestione pulsante "Conferma" del modale esito AI
        document.getElementById('btnAiConfirm').addEventListener('click', async () => {
            const aiResultModal = document.getElementById('aiResultModal');
            const status = aiResultModal.dataset.verificationStatus;

            if (status === 'failed') {
                const confirmed = confirm("La verifica dell'indirizzo non è stata superata. Sei sicuro di voler salvare comunque?");
                if (!confirmed) {
                    return; // L'utente ha annullato, non procedere
                }
            }

            // Se la verifica è superata o l'utente ha confermato nonostante il fallimento
            aiResultModal.close();
            await submitData(); // Procede con il salvataggio effettivo
        });

        document.addEventListener('DOMContentLoaded', async () => {
            // Inizializzazione Componente Multi-Tag
            funzioniControl = await initMultiTag({
                containerId: 'funzioniContainer',
                group: 'FUNZIONE',
                inputName: 'funzioni_ids',
                label: 'Funzioni'
            });

            await loadSocietaDropdown();
            await loadTipiSedeDropdown();
            
            if (isNew) {
                document.getElementById('pageTitle').innerText = "Nuova Sede";
                form.action = "/anagrafica/gestione-sedi/add";
                document.getElementById('id').value = '';

                const urlParams = new URLSearchParams(window.location.search);
                const societaIdParam = urlParams.get('societa_id');
                if (societaIdParam) {
                    const socSelect = document.getElementById('societa_id');
                    socSelect.value = societaIdParam;
                    const option = socSelect.options[socSelect.selectedIndex];
                    if (option && option.value) { // Assicura che sia stata selezionata un'opzione valida
                        renderContext([
                            { label: 'Società', value: option.text, url: `/anagrafica/dettaglio-societa/${societaIdParam}` }
                        ]);
                        socSelect.closest('.form-control').classList.add('hidden');
                    }
                }
            } else {
                document.getElementById('pageTitle').innerText = "Modifica Sede";
                form.action = "/anagrafica/gestione-sedi/edit";
                loadData();
            }
        });

        async function loadSocietaDropdown() {
            const socRes = await fetch('/api/anagrafica/societa');
            const socData = await socRes.json();

            const socSel = document.getElementById('societa_id');
            socSel.innerHTML = '<option value="">Seleziona Società...</option>';
            socData.forEach(s => socSel.innerHTML += `<option value="${s.id}">${s.ragione_sociale}</option>`);
        }
        
        async function loadTipiSedeDropdown() {
            const sel = document.getElementById('tipo_sede_id');
            try {
                const res = await fetch('/api/settings/categorie?gruppo=SEDE');
                const tipi = await res.json();
                sel.innerHTML = '<option value="">Seleziona Tipo...</option>';
                tipi.forEach(tipo => {
                    sel.innerHTML += `<option value="${tipo.id}">${tipo.valore}</option>`;
                });
            } catch (e) {
                sel.innerHTML = '<option value="">Errore caricamento tipi</option>';
            }
        }

        function loadData() {
            const urlParams = new URLSearchParams(window.location.search);
            const is_legal = urlParams.get('is_legal') === 'true';

            fetch(`/api/anagrafica/sedi?id=${id}&is_legal=${is_legal}`)
                .then(res => res.json())
                .then(data => {
                    if (data && data.length > 0) {
                        const item = data[0];
                        document.getElementById('is_legal_original').value = item.is_legal || false;
                        document.getElementById('indirizzo_id').value = item.indirizzo;
                        document.getElementById('societa_id').value = item.societa;
                        document.getElementById('tipo_sede_id').value = item.expand.categorie[0]?.id || '';

                        // Caricamento contatti esistenti
                        if (item.expand && item.expand.contatti) {
                            contactsData = Array.isArray(item.expand.contatti) ? item.expand.contatti : [item.expand.contatti];
                            contactsData = contactsData.map(c => ({ id: c.id, tipo: c.tipo, valore: c.valore }));
                            renderContacts();
                        }

                        // Popolamento Funzioni (Tag)
                        if (item.expand && item.expand.categorie && funzioniControl) {
                            const cats = Array.isArray(item.expand.categorie) ? item.expand.categorie : [item.expand.categorie];
                            // Filtra solo le categorie del gruppo FUNZIONE per non includere il Tipo Sede
                            const funIds = cats.filter(c => c.gruppo === 'FUNZIONE').map(c => c.id);
                            funzioniControl.setSelection(funIds);
                        }
                        
                        if (item.expand?.societa) {
                            renderContext([
                                { label: 'Società', value: item.expand.societa.ragione_sociale, url: `/anagrafica/dettaglio-societa/${item.societa}` }
                            ]);
                            document.getElementById('societa_id').closest('.form-control').classList.add('hidden');
                        }
                        
                        document.getElementById('via').value = item.expand.indirizzo?.via || '';
                        document.getElementById('numero_civico').value = item.expand.indirizzo?.numero_civico || '';
                        document.getElementById('cap').value = item.expand.indirizzo?.cap || '';
                        document.getElementById('comune').value = item.expand.indirizzo?.comune || '';
                        document.getElementById('provincia').value = item.expand.indirizzo?.provincia || '';
                        document.getElementById('paese').value = item.expand.indirizzo?.paese || 'IT';
                    } else {
                        alert("Sede non trovata.");
                    }
                });
        }

        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            setButtonLoading(true, 'Verifica AI...');

            // Serializza i contatti nel campo hidden
            document.getElementById('contatti_json').value = JSON.stringify(contactsData);
            
            // Preparazione dati per verifica indirizzo
            const payload = {
                via: document.getElementById('via').value,
                civico: document.getElementById('numero_civico').value,
                cap: document.getElementById('cap').value,
                comune: document.getElementById('comune').value,
                provincia: document.getElementById('provincia').value,
                paese: document.getElementById('paese').value
            };

            try {
                const verifyRes = await fetch('/util/gemini/verify-address', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (!verifyRes.ok) throw new Error("Errore comunicazione API");

                const result = await verifyRes.json();
                const text = result.text || '';

                // Analisi esito per styling
                const lowerText = text.toLowerCase();
                const isSuccess = lowerText.includes("esito generale: superato");
                const isFailure = lowerText.includes("esito generale: non superato");
                
                const aiResultModal = document.getElementById('aiResultModal');
                const contentDiv = document.getElementById('aiResultContent');
                const userInputDiv = document.getElementById('userInputData');

                // Popola i dati inseriti dall'utente
                const userInputString = `${payload.via || ''} ${payload.civico || ''}, ${payload.cap || ''} ${payload.comune || ''} (${payload.provincia || ''}) - ${payload.paese || ''}`.trim();
                userInputDiv.innerText = userInputString;

                // Popola il risultato dell'AI
                contentDiv.innerText = text;
                
                // Reset classi e applica stile in base all'esito
                contentDiv.className = 'py-4 px-4 rounded-lg whitespace-pre-wrap border text-sm';
                if (isSuccess) {
                    contentDiv.classList.add('bg-green-50', 'border-green-200', 'text-green-900');
                } else if (isFailure) {
                    contentDiv.classList.add('bg-red-50', 'border-red-200', 'text-red-900');
                } else {
                    contentDiv.classList.add('bg-base-200', 'border-base-300');
                }

                // Imposta lo stato della verifica per il pulsante di conferma
                aiResultModal.dataset.verificationStatus = isFailure ? 'failed' : 'passed';

                aiResultModal.showModal();
            } catch (error) {
                console.error("Errore verifica indirizzo:", error);
                setButtonLoading(false); // Ripristina il pulsante in caso di errore
                serviceErrorModal.showModal();
            }
        });

        async function submitData() {
            setButtonLoading(true, 'Salvataggio...');
            try {
                const formData = new FormData(form);
                const params = new URLSearchParams(formData);

                const res = await fetch(form.action, {
                    method: 'POST',
                    body: params,
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' }
                });

                const data = await res.json();

                if (!res.ok || data.error) {
                    alert("Errore: " + (data.error || `Errore server ${res.status}`));
                } else {
                    alert(data.message);
                    if (isNew) {
                        // Reindirizza alla pagina di dettaglio della nuova sede
                        if (data.id) {
                            window.location.href = `/anagrafica/dettaglio-sede/${data.id}`;
                        } else {
                            window.close();
                        }
                    } else {
                        // Ricarica la pagina per mostrare i dati aggiornati
                        window.location.reload();
                    }
                }
            } catch (error) {
                console.error("Errore nel salvataggio:", error);
                alert("Si è verificato un errore di comunicazione durante il salvataggio.");
            } finally {
                // Se non stiamo reindirizzando (es. errore o reload imminente), ripristina il bottone
                if (!isNew) {
                    setButtonLoading(false);
                }
            }
        }

        function renderContext(items) {
            const list = document.getElementById('contextList');
            list.innerHTML = '';
            items.forEach(item => {
                const div = document.createElement('div');
                div.className = 'flex items-center gap-2';
                div.innerHTML = `
                    <span class="opacity-70 font-semibold min-w-[60px]">${item.label}:</span>
                    <a href="#" onclick="window.open('${item.url}', '_blank', 'width=1024,height=768'); return false;" class="link link-primary hover:text-primary-focus font-medium">${item.value}</a>
                `;
                list.appendChild(div);
            });
            document.getElementById('contextInfo').classList.remove('hidden');
        }

        // --- Gestione Contatti (Logica identica a Società) ---
        function renderContacts() {
            const tbody = document.getElementById('contactsList');
            tbody.innerHTML = '';
            
            if (contactsData.length === 0) {
                tbody.innerHTML = '<tr><td colspan="3" class="text-center text-sm text-gray-400 py-4 italic">Nessun contatto inserito</td></tr>';
                return;
            }
            
            contactsData.forEach((contact, index) => {
                let icon = 'bi-chat-text';
                let iconColor = 'text-gray-500';

                if(contact.tipo === 'email') { icon = 'bi-envelope'; iconColor = 'text-blue-500'; }
                if(contact.tipo === 'pec') { icon = 'bi-patch-check-fill'; iconColor = 'text-purple-500'; }
                if(contact.tipo === 'mobile') { icon = 'bi-phone'; iconColor = 'text-green-500'; }
                if(contact.tipo === 'phone') { icon = 'bi-telephone'; iconColor = 'text-orange-500'; }

                const tr = document.createElement('tr');
                tr.className = 'group hover:bg-base-50 transition-colors duration-200';
                tr.innerHTML = `
                    <td class="align-middle">
                        <div class="flex items-center gap-3">
                            <div class="w-8 h-8 rounded-full bg-base-200 flex items-center justify-center shrink-0">
                                <i class="bi ${icon} ${iconColor} text-lg"></i>
                            </div>
                            <select class="select select-ghost select-xs w-full max-w-[120px] font-medium opacity-80 hover:opacity-100 focus:opacity-100 focus:bg-base-100" onchange="updateContact(${index}, 'tipo', this.value); renderContacts();">
                                <option value="email" ${contact.tipo === 'email' ? 'selected' : ''}>Email</option>
                                <option value="pec" ${contact.tipo === 'pec' ? 'selected' : ''}>PEC</option>
                                <option value="mobile" ${contact.tipo === 'mobile' ? 'selected' : ''}>Mobile</option>
                                <option value="phone" ${contact.tipo === 'phone' ? 'selected' : ''}>Telefono</option>
                            </select>
                        </div>
                    </td>
                    <td class="align-middle">
                        <input type="text" class="input input-ghost input-sm w-full focus:bg-base-100 focus:input-bordered transition-all" value="${contact.valore}" onchange="updateContact(${index}, 'valore', this.value)" placeholder="Valore contatto...">
                    </td>
                    <td class="text-center align-middle">
                        <button type="button" class="btn btn-sm btn-ghost btn-circle text-error opacity-0 group-hover:opacity-100 transition-opacity" onclick="removeContact(${index})" title="Rimuovi">
                            <i class="bi bi-trash3-fill"></i>
                        </button>
                    </td>
                `;
                tbody.appendChild(tr);
            });
        }

        function updateNewContactIcon(type) {
            const iconEl = document.getElementById('newContactIcon');
            let icon = 'bi-chat-text';
            if(type === 'email') icon = 'bi-envelope';
            if(type === 'pec') icon = 'bi-patch-check-fill';
            if(type === 'mobile') icon = 'bi-phone';
            if(type === 'phone') icon = 'bi-telephone';
            iconEl.className = `bi ${icon} text-lg opacity-70`;
        }

        function handleEnter(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                addNewContact();
            }
        }

        function addNewContact() {
            const typeSelect = document.getElementById('newContactType');
            const valueInput = document.getElementById('newContactValue');
            const tipo = typeSelect.value;
            const valore = valueInput.value.trim();

            if (!valore) return;

            contactsData.push({ tipo, valore });
            renderContacts();
            
            valueInput.value = ''; 
            valueInput.focus();
        }

        function updateContact(index, field, value) {
            contactsData[index][field] = value;
        }

        function removeContact(index) {
            contactsData.splice(index, 1);
            renderContacts();
        }

        // Componente Multi-Tag Standardizzato (Identico a Società)
        async function initMultiTag(config) {
            const { containerId, group, inputName, label } = config;
            const container = document.getElementById(containerId);
            
            // UI: Dropdown con Checkboxes per selezione multipla
            container.innerHTML = `
                <label class="label"><span class="label-text">${label}</span></label>
                <div class="dropdown w-full">
                    <div tabindex="0" role="button" class="input input-bordered w-full flex items-center justify-between h-auto min-h-[3rem] py-2" id="dropdown_btn_${inputName}">
                        <div id="selected_tags_${inputName}" class="flex flex-wrap gap-1">
                            <span class="text-gray-400">Seleziona...</span>
                        </div>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 opacity-50" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" /></svg>
                    </div>
                    <div tabindex="0" class="dropdown-content z-[1] card card-compact w-full p-2 shadow bg-base-100 border border-base-200 max-h-60 overflow-y-auto mt-1">
                        <div class="flex flex-col gap-1" id="options_container_${inputName}">
                            <div class="flex justify-center p-2"><span class="loading loading-spinner loading-sm"></span></div>
                        </div>
                    </div>
                </div>
                <div id="inputs_${inputName}"></div>
            `;
            
            const optionsContainer = document.getElementById(`options_container_${inputName}`);
            const selectedTagsContainer = document.getElementById(`selected_tags_${inputName}`);
            const inputsContainer = document.getElementById(`inputs_${inputName}`);
            let selectedIds = new Set();
            let optionsMap = new Map();

            // Carica Opzioni
            try {
                const res = await fetch(`/api/attributes/${group}`);
                const options = await res.json();
                optionsContainer.innerHTML = '';
                options.forEach(opt => {
                    optionsMap.set(String(opt.id), opt.valore);
                    
                    const label = document.createElement('label');
                    label.className = 'label cursor-pointer justify-start gap-3 hover:bg-base-200 rounded-lg p-2';
                    
                    const checkbox = document.createElement('input');
                    checkbox.type = 'checkbox';
                    checkbox.className = 'checkbox checkbox-sm checkbox-primary';
                    checkbox.value = opt.id;
                    
                    checkbox.addEventListener('change', (e) => {
                        toggleTag(e.target.value, e.target.checked);
                    });

                    const span = document.createElement('span');
                    span.className = 'label-text';
                    span.textContent = opt.valore;

                    label.appendChild(checkbox);
                    label.appendChild(span);
                    optionsContainer.appendChild(label);
                });
            } catch(e) { 
                console.error('Errore caricamento opzioni', e); 
                optionsContainer.innerHTML = '<div class="text-error p-2">Errore caricamento opzioni</div>';
            }

            // Sincronizza UI iniziale
            syncUI();

            function toggleTag(id, isChecked) {
                if (isChecked) selectedIds.add(String(id));
                else selectedIds.delete(String(id));
                syncUI();
            }

            function syncUI() {
                // Aggiorna Checkbox
                const checkboxes = optionsContainer.querySelectorAll('input[type="checkbox"]');
                checkboxes.forEach(cb => {
                    cb.checked = selectedIds.has(cb.value);
                });

                // Aggiorna Inputs Hidden
                inputsContainer.innerHTML = '';
                selectedIds.forEach(id => {
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = inputName;
                    input.value = id;
                    inputsContainer.appendChild(input);
                });

                // Aggiorna Visualizzazione Tags nel bottone
                selectedTagsContainer.innerHTML = '';
                if (selectedIds.size === 0) {
                    selectedTagsContainer.innerHTML = '<span class="text-gray-400">Seleziona...</span>';
                } else {
                    selectedIds.forEach(id => {
                        const text = optionsMap.get(id) || id;
                        const badge = document.createElement('div');
                        badge.className = 'badge badge-ghost bg-blue-50 text-blue-700 border-blue-200 h-auto py-2 pl-3 pr-2 gap-2 rounded-lg shadow-sm';
                        badge.innerHTML = `<span class="font-medium">${text}</span><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-4 h-4 stroke-current cursor-pointer hover:text-blue-900 transition-colors"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>`;
                        
                        // Gestione rimozione tag tramite icona X
                        badge.querySelector('svg').addEventListener('click', (e) => {
                            e.stopPropagation(); // Evita l'apertura/chiusura del dropdown
                            toggleTag(id, false);
                        });
                        
                        selectedTagsContainer.appendChild(badge);
                    });
                }
            }

            // API pubblica del componente
            return {
                setSelection: (ids) => {
                    selectedIds = new Set(ids.map(String));
                    syncUI();
                }
            };
        }
    </script>
